  <script>
    // Enhanced File Upload Handling
    const dropZone = document.getElementById('dropZone');
    const fileInput = document.getElementById('fileInput');
    const fileName = document.getElementById('fileName');
    const imagePreview = document.getElementById('imagePreview');
    const uploadContent = document.querySelector('.upload-content');

    // Click to upload
    dropZone.addEventListener('click', () => fileInput.click());

    // Drag and drop events
    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('dragover');
    });

    dropZone.addEventListener('dragleave', (e) => {
      e.preventDefault();
      if (!dropZone.contains(e.relatedTarget)) {
        dropZone.classList.remove('dragover');
      }
    });

    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('dragover');

      if (e.dataTransfer.files.length) {
        fileInput.files = e.dataTransfer.files;
        handleFile(e.dataTransfer.files[0]);
      }
    });

    // File input change
    fileInput.addEventListener('change', () => {
      if (fileInput.files.length) {
        handleFile(fileInput.files[0]);
      }
    });

    // Enhanced file handling
    function handleFile(file) {
      // Validate file type
      if (!file.type.startsWith('image/')) {
        showNotification('Please select an image file', 'error');
        return;
      }

      // Validate file size (5MB max)
      if (file.size > 5 * 1024 * 1024) {
        showNotification('File size must be less than 5MB', 'error');
        return;
      }

      // Update file name display
      fileName.textContent = file.name;
      
      // Show loading state
      dropZone.style.opacity = '0.7';
      dropZone.style.pointerEvents = 'none';
      
      const reader = new FileReader();
      reader.onload = (e) => {
        // Create image preview
        imagePreview.style.backgroundImage = `url('${e.target.result}')`;
        imagePreview.classList.add('has-image');
        
        // Hide upload content and show preview
        uploadContent.style.opacity = '0';
        setTimeout(() => {
          uploadContent.style.display = 'none';
          imagePreview.style.display = 'block';
          dropZone.style.opacity = '1';
          dropZone.style.pointerEvents = 'auto';
          
          // Add success animation
          dropZone.style.transform = 'scale(1.02)';
          setTimeout(() => {
            dropZone.style.transform = 'scale(1)';
          }, 200);
        }, 300);
        
        showNotification('Image uploaded successfully', 'success');
      };
      
      reader.onerror = () => {
        showNotification('Error reading file', 'error');
        dropZone.style.opacity = '1';
        dropZone.style.pointerEvents = 'auto';
      };
      
      reader.readAsDataURL(file);
    }

    // Notification system
    function showNotification(message, type = 'info') {
      // Remove existing notifications
      const existingNotification = document.querySelector('.notification-toast');
      if (existingNotification) {
        existingNotification.remove();
      }

      // Create notification
      const notification = document.createElement('div');
      notification.className = `notification-toast ${type}`;
      notification.innerHTML = `
        <div class="notification-content">
          <ion-icon name="${type === 'success' ? 'checkmark-circle' : type === 'error' ? 'alert-circle' : 'information-circle'}"></ion-icon>
          <span>${message}</span>
        </div>
      `;

      // Add styles
      notification.style.cssText = `
        position: fixed;
        top: 80px;
        right: 24px;
        background: ${type === 'success' ? '#30D158' : type === 'error' ? '#FF3B30' : '#007AFF'};
        color: white;
        padding: 12px 20px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        z-index: 10000;
        font-weight: 500;
        font-size: 14px;
        transform: translateX(100%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 8px;
      `;

      document.body.appendChild(notification);

      // Animate in
      setTimeout(() => {
        notification.style.transform = 'translateX(0)';
      }, 100);

      // Auto remove
      setTimeout(() => {
        notification.style.transform = 'translateX(100%)';
        setTimeout(() => {
          if (notification.parentNode) {
            notification.remove();
          }
        }, 300);
      }, 3000);
    }

    // Enhanced Color Picker
    const colorInput = document.getElementById('colorInput');
    const colorPreview = document.getElementById('colorPreview');
    const colorCode = document.getElementById('colorCode');

    // Barcode Generation Functions
    function generateBarcode() {
      const barcodeInput = document.getElementById('barcodeInput');
      
      // Generate a random barcode from multiple formats
      const barcode = generateRandomBarcode();
      
      barcodeInput.value = barcode;
      
      // Add success animation
      barcodeInput.style.transform = 'scale(1.02)';
      barcodeInput.style.borderColor = '#30d158';
      setTimeout(() => {
        barcodeInput.style.transform = 'scale(1)';
        barcodeInput.style.borderColor = '';
      }, 200);
      
      showNotification(`Generated barcode: ${barcode}`, 'success');
    }

    function generateRandomBarcode() {
      // Randomly choose between different professional barcode formats
      const formats = [
        generateEAN13,
        generateEAN8,
        generateUPCA,
        generateCode128,
        generateRandomAlphanumeric
      ];
      
      const randomFormat = formats[Math.floor(Math.random() * formats.length)];
      return randomFormat();
    }

    function generateEAN13() {
      // Generate 12 random digits
      let digits = '';
      for (let i = 0; i < 12; i++) {
        digits += Math.floor(Math.random() * 10);
      }
      
      // Calculate check digit
      let sum = 0;
      for (let i = 0; i < 12; i++) {
        sum += parseInt(digits[i]) * (i % 2 === 0 ? 1 : 3);
      }
      const checkDigit = (10 - (sum % 10)) % 10;
      
      return digits + checkDigit;
    }

    function generateEAN8() {
      // Generate 7 random digits
      let digits = '';
      for (let i = 0; i < 7; i++) {
        digits += Math.floor(Math.random() * 10);
      }
      
      // Calculate check digit
      let sum = 0;
      for (let i = 0; i < 7; i++) {
        sum += parseInt(digits[i]) * (i % 2 === 0 ? 3 : 1);
      }
      const checkDigit = (10 - (sum % 10)) % 10;
      
      return digits + checkDigit;
    }

    function generateUPCA() {
      // Generate 11 random digits
      let digits = '';
      for (let i = 0; i < 11; i++) {
        digits += Math.floor(Math.random() * 10);
      }
      
      // Calculate check digit
      let sum = 0;
      for (let i = 0; i < 11; i++) {
        sum += parseInt(digits[i]) * (i % 2 === 0 ? 3 : 1);
      }
      const checkDigit = (10 - (sum % 10)) % 10;
      
      return digits + checkDigit;
    }

    function generateCode128() {
      // Generate random alphanumeric code (8-12 characters)
      const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
      let result = '';
      const length = 8 + Math.floor(Math.random() * 5); // 8-12 characters
      
      for (let i = 0; i < length; i++) {
        result += chars.charAt(Math.floor(Math.random() * chars.length));
      }
      
      return result;
    }

    function generateRandomAlphanumeric() {
      // Generate random alphanumeric code (10-15 characters)
      const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
      let result = '';
      const length = 10 + Math.floor(Math.random() * 6); // 10-15 characters
      
      for (let i = 0; i < length; i++) {
        result += chars.charAt(Math.floor(Math.random() * chars.length));
      }
      
      return result;
    }

    // Set initial color
    const initialColor = colorInput.value;
    colorPreview.style.backgroundColor = initialColor;
    colorCode.textContent = initialColor.toUpperCase();

    colorInput.addEventListener('input', (e) => {
      const color = e.target.value;
      
      // Update preview and code
      colorPreview.style.backgroundColor = color;
      colorCode.textContent = color.toUpperCase();
      
      // Add subtle animation
      colorPreview.style.transform = 'scale(1.1)';
      setTimeout(() => {
        colorPreview.style.transform = 'scale(1)';
      }, 150);
    });

    // Form validation enhancement
    function validateForm() {
      const requiredFields = document.querySelectorAll('input[required], select[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        const wrapper = field.closest('.input-wrapper');
        wrapper.classList.remove('error', 'success');
        
        if (!field.value.trim()) {
          wrapper.classList.add('error');
          isValid = false;
        } else {
          wrapper.classList.add('success');
        }
      });
      
      return isValid;
    }

    // Add real-time validation
    document.querySelectorAll('input[required], select[required]').forEach(field => {
      field.addEventListener('blur', () => {
        const wrapper = field.closest('.input-wrapper');
        wrapper.classList.remove('error', 'success');
        
        if (field.value.trim()) {
          wrapper.classList.add('success');
        } else {
          wrapper.classList.add('error');
        }
      });
      
      field.addEventListener('input', () => {
        if (field.value.trim()) {
          const wrapper = field.closest('.input-wrapper');
          wrapper.classList.remove('error');
        }
      });
    });

    // Form submission enhancement
    const form = document.querySelector('.add-item-form');
    form.addEventListener('submit', (e) => {
      if (!validateForm()) {
        e.preventDefault();
        showNotification('Please fill in all required fields', 'error');
        
        // Focus on first error field
        const firstError = document.querySelector('.input-wrapper.error input, .input-wrapper.error select');
        if (firstError) {
          firstError.focus();
        }
        return;
      }

      // Add loading state to submit button
      const submitBtn = form.querySelector('.btn-submit');
      submitBtn.classList.add('loading');
      submitBtn.innerHTML = '<ion-icon name="loader-outline"></ion-icon> Adding Product...';
    });

    // Add smooth scroll to first error
    function scrollToFirstError() {
      const firstError = document.querySelector('.input-wrapper.error');
      if (firstError) {
        firstError.scrollIntoView({ 
          behavior: 'smooth', 
          block: 'center' 
        });
      }
    }

    // Initialize animations on load
    document.addEventListener('DOMContentLoaded', () => {
      // Stagger card animations
      const cards = document.querySelectorAll('.form-card');
      cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
      });

      // Add intersection observer for scroll animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, { threshold: 0.1 });

      cards.forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(card);
      });
    });
  </script>

