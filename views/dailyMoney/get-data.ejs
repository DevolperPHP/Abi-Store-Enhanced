<!-- Modern Transaction Details Container -->
<div class="transaction-details-container">
    <!-- Transaction Header -->
    <div class="transaction-header">
        <div class="header-content">
            <div class="header-icon">
                <ion-icon name="receipt-outline"></ion-icon>
            </div>
            <div class="header-text">
                <h1 class="transaction-title">Transaction Details</h1>
                <p class="transaction-subtitle">View and manage daily transaction record</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn-secondary" onclick="window.location.href='/dailymoney'">
                <ion-icon name="arrow-back-outline"></ion-icon>
                Back to Dashboard
            </button>
            <button class="btn-export" onclick="exportTransaction()">
                <ion-icon name="download-outline"></ion-icon>
                Export
            </button>
        </div>
    </div>

    <!-- Transaction Info Card -->
    <div class="transaction-info-card">
        <div class="info-header">
            <h3 class="info-title">
                <ion-icon name="calendar-outline"></ion-icon>
                Transaction Information
            </h3>
            <div class="info-actions">
                <button class="btn-edit" onclick="editTransaction()">
                    <ion-icon name="create-outline"></ion-icon>
                    Edit
                </button>
            </div>
        </div>
        
        <div class="info-content">
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="calendar-outline"></ion-icon>
                        Date
                    </div>
                    <div class="info-value"><%= data.Date%></div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="cash-outline"></ion-icon>
                        Total Amount
                    </div>
                    <div class="info-value amount"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="list-outline"></ion-icon>
                        Transaction Count
                    </div>
                    <div class="info-value"><%= data.purchase.length%> item<%= data.purchase.length !== 1 ? 's' : '' %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="time-outline"></ion-icon>
                        Created
                    </div>
                    <div class="info-value"><%= new Date(data.sortDate).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    }) %></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-cards">
        <div class="summary-card">
            <div class="summary-icon">
                <ion-icon name="trending-up-outline"></ion-icon>
            </div>
            <div class="summary-content">
                <div class="summary-label">Average per Transaction</div>
                <div class="summary-value">
                    <% if (data.purchase.length > 0) { %>
                        <%= Math.round(total / data.purchase.length).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                    <% } else { %>
                        0 IQD
                    <% } %>
                </div>
            </div>
        </div>
        <div class="summary-card">
            <div class="summary-icon">
                <ion-icon name="wallet-outline"></ion-icon>
            </div>
            <div class="summary-content">
                <div class="summary-label">Largest Transaction</div>
                <div class="summary-value">
                    <% 
                    let maxTransaction = 0;
                    if (data.purchase.length > 0) {
                        data.purchase.forEach(item => {
                            if (item.cost > maxTransaction) {
                                maxTransaction = item.cost;
                            }
                        });
                    }
                    %>
                    <%= maxTransaction.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Section -->
    <div class="transactions-section">
        <div class="section-header">
            <h3 class="section-title">Transaction Items</h3>
            <div class="section-subtitle">Manage individual transaction entries</div>
        </div>

        <!-- Add New Transaction Form -->
        <div class="add-transaction-form">
            <div class="form-header">
                <h4 class="form-title">
                    <ion-icon name="add-circle-outline"></ion-icon>
                    Add New Transaction
                </h4>
            </div>
            <form action="/dailymoney/add/<%= data.id%>?_method=PUT" method="post" class="transaction-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="title" class="form-label">
                            <ion-icon name="pricetags-outline"></ion-icon>
                            Transaction Title
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="text" 
                                id="title" 
                                name="title" 
                                class="form-input" 
                                required
                                placeholder="Enter transaction title"
                            >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cost" class="form-label">
                            <ion-icon name="cash-outline"></ion-icon>
                            Amount
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="number" 
                                id="cost" 
                                name="cost" 
                                class="form-input" 
                                required
                                placeholder="Enter amount"
                                min="0"
                                step="0.01"
                            >
                            <span class="input-suffix">IQD</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn-add">
                            <ion-icon name="add-outline"></ion-icon>
                            Add Transaction
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Transactions Table -->
        <div class="transactions-table-container">
            <% if (data.purchase.length === 0) { %>
                <div class="empty-transactions">
                    <div class="empty-icon">
                        <ion-icon name="receipt-outline"></ion-icon>
                    </div>
                    <h4 class="empty-title">No Transactions Yet</h4>
                    <p class="empty-description">Add your first transaction using the form above</p>
                </div>
            <% } else { %>
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th class="col-num">#</th>
                            <th class="col-title">Transaction Title</th>
                            <th class="col-amount">Amount</th>
                            <th class="col-percentage">% of Total</th>
                            <th class="col-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.purchase.forEach((getData, index) => { 
                            const percentage = total > 0 ? ((getData.cost / total) * 100).toFixed(1) : 0;
                        %>
                            <tr class="transaction-row">
                                <td class="col-num">
                                    <span class="transaction-number"><%= index + 1%></span>
                                </td>
                                <td class="col-title">
                                    <div class="title-content">
                                        <div class="title-text"><%= getData.title%></div>
                                        <div class="title-subtitle">Transaction #<%= index + 1%></div>
                                    </div>
                                </td>
                                <td class="col-amount">
                                    <div class="amount-display">
                                        <div class="amount-value"><%= getData.cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%></div>
                                        <div class="amount-currency">IQD</div>
                                    </div>
                                </td>
                                <td class="col-percentage">
                                    <div class="percentage-display">
                                        <div class="percentage-bar">
                                            <div class="percentage-fill" style="width: <%= percentage %>%"></div>
                                        </div>
                                        <span class="percentage-text"><%= percentage %>%</span>
                                    </div>
                                </td>
                                <td class="col-actions">
                                    <div class="action-buttons">
                                        <button class="action-btn edit" onclick="editTransactionItem('<%= getData.title%>', '<%= getData.cost%>')">
                                            <ion-icon name="create-outline"></ion-icon>
                                        </button>
                                        <form action="/dailymoney/remove/<%= data.id%>/<%= getData.title%>/<%= getData.cost%>?_method=PUT" method="post" class="remove-form">
                                            <button type="submit" class="action-btn delete" onclick="return confirm('Are you sure you want to remove this transaction?')">
                                                <ion-icon name="trash-outline"></ion-icon>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>

        <!-- Total Summary -->
        <div class="total-summary-section">
            <div class="summary-card total">
                <div class="summary-content">
                    <div class="summary-label">
                        <ion-icon name="calculator-outline"></ion-icon>
                        Grand Total
                    </div>
                    <div class="summary-value">
                        <%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                    </div>
                </div>
                <div class="summary-stats">
                    <div class="stat-item">
                        <span class="stat-label">Transactions:</span>
                        <span class="stat-value"><%= data.purchase.length%></span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Average:</span>
                        <span class="stat-value">
                            <% if (data.purchase.length > 0) { %>
                                <%= Math.round(total / data.purchase.length).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                            <% } else { %>
                                0 IQD
                            <% } %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Transaction Modal -->
