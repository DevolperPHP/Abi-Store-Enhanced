<%- include("../layout/navbar") -%>

<!-- Modern Loading Container -->
<div class="loading-container">
    <!-- Loading Card -->
    <div class="loading-card">
        <div class="loading-content">
            <!-- Animated Icon -->
            <div class="loading-icon">
                <div class="icon-container">
                    <ion-icon name="folder-outline"></ion-icon>
                    <div class="icon-glow"></div>
                </div>
            </div>

            <!-- Loading Text -->
            <div class="loading-text">
                <h2 class="loading-title">Creating Transaction Record</h2>
                <p class="loading-description">Please wait while we set up your new daily transaction folder</p>
            </div>

            <!-- Progress Bar -->
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <div class="progress-text">
                    <span class="progress-status" id="progressStatus">Initializing...</span>
                    <span class="progress-percentage" id="progressPercentage">0%</span>
                </div>
            </div>

            <!-- Steps Indicator -->
            <div class="steps-indicator">
                <div class="step active" id="step1">
                    <div class="step-icon">
                        <ion-icon name="folder-outline"></ion-icon>
                    </div>
                    <div class="step-label">Creating Folder</div>
                </div>
                <div class="step" id="step2">
                    <div class="step-icon">
                        <ion-icon name="settings-outline"></ion-icon>
                    </div>
                    <div class="step-label">Initializing</div>
                </div>
                <div class="step" id="step3">
                    <div class="step-icon">
                        <ion-icon name="checkmark-outline"></ion-icon>
                    </div>
                    <div class="step-label">Complete</div>
                </div>
            </div>

            <!-- Estimated Time -->
            <div class="estimated-time">
                <ion-icon name="time-outline"></ion-icon>
                <span>Estimated time: <span id="estimatedTime">3</span> seconds</span>
            </div>
        </div>
    </div>

    <!-- Background Animation -->
    <div class="background-animation">
        <div class="floating-icon icon-1">
            <ion-icon name="calendar-outline"></ion-icon>
        </div>
        <div class="floating-icon icon-2">
            <ion-icon name="cash-outline"></ion-icon>
        </div>
        <div class="floating-icon icon-3">
            <ion-icon name="receipt-outline"></ion-icon>
        </div>
        <div class="floating-icon icon-4">
            <ion-icon name="trending-up-outline"></ion-icon>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal-overlay success-modal" id="successModal" style="display: none;">
    <div class="modal success">
        <div class="success-content">
            <div class="success-icon">
                <ion-icon name="checkmark-circle-outline"></ion-icon>
            </div>
            <h3 class="success-title">Transaction Record Created!</h3>
            <p class="success-description">Your daily transaction folder has been successfully created and is ready to use.</p>
            <div class="success-actions">
                <button class="btn-primary" onclick="redirectToDashboard()">
                    <ion-icon name="arrow-forward-outline"></ion-icon>
                    Go to Dashboard
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===== LOADING CONTAINER ===== */
    .loading-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        position: relative;
        overflow: hidden;
        padding: 20px;
    }

    /* ===== LOADING CARD ===== */
    .loading-card {
        background: #ffffff;
        border-radius: 24px;
        padding: 48px;
        max-width: 480px;
        width: 100%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(20px);
        position: relative;
        z-index: 2;
    }

    .loading-content {
        text-align: center;
    }

    /* ===== LOADING ICON ===== */
    .loading-icon {
        margin-bottom: 32px;
    }

    .icon-container {
        position: relative;
        display: inline-block;
        width: 80px;
        height: 80px;
    }

    .icon-container ion-icon {
        font-size: 80px;
        color: #007AFF;
        animation: iconFloat 2s ease-in-out infinite;
        position: relative;
        z-index: 2;
    }

    .icon-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100px;
        height: 100px;
        background: radial-gradient(circle, rgba(0, 122, 255, 0.2) 0%, transparent 70%);
        border-radius: 50%;
        animation: glowPulse 2s ease-in-out infinite;
        z-index: 1;
    }

    @keyframes iconFloat {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    @keyframes glowPulse {
        0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
        50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.8; }
    }

    /* ===== LOADING TEXT ===== */
    .loading-text {
        margin-bottom: 40px;
    }

    .loading-title {
        font-size: 28px;
        font-weight: 700;
        color: #1d1d1f;
        margin: 0 0 12px 0;
        letter-spacing: -0.5px;
    }

    .loading-description {
        font-size: 16px;
        color: #8e8e93;
        margin: 0;
        line-height: 1.5;
    }

    /* ===== PROGRESS BAR ===== */
    .progress-container {
        margin-bottom: 40px;
    }

    .progress-bar {
        width: 100%;
        height: 8px;
        background: #f0f0f0;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 16px;
        position: relative;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #007AFF, #5856D6);
        border-radius: 4px;
        width: 0%;
        transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

    .progress-fill::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
        animation: shimmer 1.5s infinite;
    }

    @keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .progress-text {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .progress-status {
        font-size: 14px;
        font-weight: 500;
        color: #8e8e93;
    }

    .progress-percentage {
        font-size: 14px;
        font-weight: 600;
        color: #007AFF;
    }

    /* ===== STEPS INDICATOR ===== */
    .steps-indicator {
        display: flex;
        justify-content: space-between;
        margin-bottom: 32px;
        position: relative;
    }

    .steps-indicator::before {
        content: '';
        position: absolute;
        top: 20px;
        left: 40px;
        right: 40px;
        height: 2px;
        background: #f0f0f0;
        z-index: 1;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        position: relative;
        z-index: 2;
    }

    .step-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f0f0f0;
        color: #8e8e93;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .step-icon ion-icon {
        font-size: 18px;
    }

    .step.active .step-icon {
        background: #007AFF;
        color: #ffffff;
        box-shadow: 0 4px 12px rgba(0, 122, 255, 0.3);
        animation: stepPulse 1.5s ease-in-out infinite;
    }

    .step.completed .step-icon {
        background: #34C759;
        color: #ffffff;
    }

    @keyframes stepPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .step-label {
        font-size: 12px;
        font-weight: 500;
        color: #8e8e93;
        text-align: center;
        max-width: 80px;
    }

    .step.active .step-label {
        color: #007AFF;
        font-weight: 600;
    }

    .step.completed .step-label {
        color: #34C759;
        font-weight: 600;
    }

    /* ===== ESTIMATED TIME ===== */
    .estimated-time {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 14px;
        color: #8e8e93;
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 12px;
        border: 1px solid #f0f0f0;
    }

    .estimated-time ion-icon {
        font-size: 16px;
        color: #007AFF;
    }

    /* ===== BACKGROUND ANIMATION ===== */
    .background-animation {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        z-index: 1;
    }

    .floating-icon {
        position: absolute;
        color: rgba(0, 122, 255, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .floating-icon ion-icon {
        font-size: 40px;
    }

    .icon-1 {
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }

    .icon-2 {
        top: 60%;
        right: 15%;
        animation-delay: 2s;
    }

    .icon-3 {
        bottom: 30%;
        left: 20%;
        animation-delay: 4s;
    }

    .icon-4 {
        top: 40%;
        right: 25%;
        animation-delay: 1s;
    }

    @keyframes float {
        0%, 100% { 
            transform: translateY(0px) rotate(0deg);
            opacity: 0.3;
        }
        50% { 
            transform: translateY(-20px) rotate(5deg);
            opacity: 0.6;
        }
    }

    /* ===== SUCCESS MODAL ===== */
    .success-modal {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
    }

    .modal.success {
        max-width: 420px;
        text-align: center;
        animation: successSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes successSlideIn {
        0% {
            transform: translateY(30px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .success-content {
        padding: 8px;
    }

    .success-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #34C759, #30d158);
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        animation: successIconScale 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .success-icon ion-icon {
        font-size: 40px;
    }

    @keyframes successIconScale {
        0% {
            transform: scale(0);
        }
        80% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }

    .success-title {
        font-size: 24px;
        font-weight: 700;
        color: #1d1d1f;
        margin: 0 0 12px 0;
        letter-spacing: -0.3px;
    }

    .success-description {
        font-size: 16px;
        color: #8e8e93;
        margin: 0 0 32px 0;
        line-height: 1.5;
    }

    .success-actions {
        display: flex;
        justify-content: center;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 24px;
        background: #007AFF;
        color: #ffffff;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
    }

    .btn-primary:hover {
        background: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 122, 255, 0.4);
    }

    .btn-primary ion-icon {
        font-size: 18px;
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 768px) {
        .loading-container {
            padding: 16px;
        }

        .loading-card {
            padding: 32px 24px;
        }

        .loading-title {
            font-size: 24px;
        }

        .loading-description {
            font-size: 15px;
        }

        .steps-indicator::before {
            left: 30px;
            right: 30px;
        }

        .step-icon {
            width: 36px;
            height: 36px;
        }

        .step-icon ion-icon {
            font-size: 16px;
        }

        .floating-icon {
            display: none;
        }
    }

    @media (max-width: 480px) {
        .loading-card {
            padding: 24px 20px;
        }

        .loading-title {
            font-size: 22px;
        }

        .progress-text {
            flex-direction: column;
            gap: 8px;
            align-items: flex-start;
        }

        .steps-indicator::before {
            left: 24px;
            right: 24px;
        }

        .step {
            gap: 6px;
        }

        .step-icon {
            width: 32px;
            height: 32px;
        }

        .step-icon ion-icon {
            font-size: 14px;
        }

        .step-label {
            font-size: 11px;
            max-width: 70px;
        }
    }
</style>

<script>
    let count = 3;
    let currentStep = 1;
    let progress = 0;

    // Update progress every 500ms
    const progressInterval = setInterval(updateProgress, 500);

    function updateProgress() {
        // Update progress percentage
        const newProgress = Math.min(progress + 2, 100);
        progress = newProgress;
        
        document.getElementById('progressFill').style.width = progress + '%';
        document.getElementById('progressPercentage').textContent = Math.round(progress) + '%';

        // Update status text based on progress
        let statusText = '';
        if (progress < 33) {
            statusText = 'Creating folder...';
            updateStep(1);
        } else if (progress < 66) {
            statusText = 'Initializing data...';
            updateStep(2);
        } else {
            statusText = 'Almost ready...';
            updateStep(2);
        }
        
        document.getElementById('progressStatus').textContent = statusText;

        // Update estimated time
        document.getElementById('estimatedTime').textContent = Math.max(0, Math.ceil((100 - progress) / 33));

        // Complete when done
        if (progress >= 100) {
            clearInterval(progressInterval);
            setTimeout(showSuccess, 500);
        }
    }

    function updateStep(stepNumber) {
        if (stepNumber !== currentStep) {
            // Mark previous step as completed
            const prevStep = document.getElementById('step' + currentStep);
            prevStep.classList.remove('active');
            prevStep.classList.add('completed');
            
            // Mark new step as active
            const newStep = document.getElementById('step' + stepNumber);
            newStep.classList.add('active');
            
            currentStep = stepNumber;
        }
    }

    function showSuccess() {
        // Complete final step
        const finalStep = document.getElementById('step3');
        finalStep.classList.add('active');
        finalStep.classList.add('completed');
        
        document.getElementById('progressStatus').textContent = 'Completed!';
        document.getElementById('progressPercentage').textContent = '100%';

        // Show success modal after a short delay
        setTimeout(() => {
            document.getElementById('successModal').style.display = 'flex';
            
            // Auto-redirect after showing success
            setTimeout(() => {
                redirectToDashboard();
            }, 2000);
        }, 800);
    }

    function redirectToDashboard() {
        window.location.href = '/dailymoney';
    }

    // Add some entrance animations
    document.addEventListener('DOMContentLoaded', function() {
        // Animate loading card entrance
        const loadingCard = document.querySelector('.loading-card');
        loadingCard.style.opacity = '0';
        loadingCard.style.transform = 'translateY(30px)';
        
        setTimeout(() => {
            loadingCard.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
            loadingCard.style.opacity = '1';
            loadingCard.style.transform = 'translateY(0)';
        }, 100);
    });

    // Update countdown in SweetAlert (if needed)
    if (typeof Swal !== 'undefined') {
        Swal.update({
            title: "Creating transaction record",
            text: count + " seconds remaining...",
        });
    }
</script>

