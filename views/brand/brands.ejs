<%- include('../layout/navbar') -%>

<% if (typeof success !== 'undefined' && success) { %>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: decodeURIComponent(`<%= success %>`),
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false
        });
        if (window.history && window.history.replaceState) {
            window.history.replaceState({}, document.title, window.location.pathname);
        }
    </script>
<% } %>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Brands</h1>
        <p class="dashboard-subtitle">Manage product brands and their logos</p>
    </div>

    <!-- Premium Inventory Controls -->
    <div class="premium-inventory-controls">
        <div class="controls-header">
            <div class="header-content">
                <div class="header-icon">
                    <ion-icon name="pricetags-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="controls-title">Brand Management</h2>
                    <p class="controls-subtitle">Create and organize product brands</p>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" onclick="refreshBrands()">
                    <ion-icon name="refresh-outline"></ion-icon>
                    Refresh
                </button>
                <button class="btn-primary" onclick="openAddBrandModal()">
                    <ion-icon name="add-outline"></ion-icon>
                    Add Brand
                </button>
            </div>
        </div>
    </div>

    <!-- Brands Grid -->
    <% if (brand && brand.length > 0) { %>
        <div class="brands-grid">
            <% brand.forEach((b, index) => { %>
                <div class="brand-card">
                    <div class="brand-image">
                        <img src="/upload/images/<%= b.image %>" alt="<%= b.name %>">
                    </div>
                    <div class="brand-info">
                        <h3 class="brand-name"><%= b.name %></h3>
                        <% if (b.Date) { %>
                            <div class="brand-meta">
                                <span class="brand-date">
                                    <ion-icon name="calendar-outline"></ion-icon>
                                    <%= b.Date %>
                                </span>
                            </div>
                        <% } %>
                    </div>
                    <div class="brand-actions">
                        <button class="action-btn" onclick="editBrand('<%= b.id %>')" title="Edit brand">
                            <ion-icon name="create-outline"></ion-icon>
                        </button>
                        <button class="action-btn delete-btn" onclick="confirmDeleteBrand('<%= b.id %>', '<%= b.name %>')" title="Delete brand">
                            <ion-icon name="trash-outline"></ion-icon>
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <!-- Empty State -->
        <div class="empty-state-card">
            <div class="empty-icon">
                <ion-icon name="pricetags-outline"></ion-icon>
            </div>
            <h3 class="empty-title">No Brands Yet</h3>
            <p class="empty-description">
                Create your first brand to organize your products. Brands help customers identify and trust your products.
            </p>
            <button class="btn-primary" onclick="openAddBrandModal()">
                <ion-icon name="add-outline"></ion-icon>
                Add Your First Brand
            </button>
        </div>
    <% } %>
</div>

<!-- Add Brand Modal -->
<div class="modal-overlay" id="addBrandModal" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Add New Brand</h2>
            <button class="modal-close" onclick="closeAddBrandModal()">
                <ion-icon name="close-outline"></ion-icon>
            </button>
        </div>
        <form action="/brand/add" method="post" enctype="multipart/form-data" class="modal-form" id="addBrandForm">
            <div class="form-group">
                <label for="brandName">Brand Name</label>
                <input type="text" id="brandName" name="name" placeholder="e.g., Apple, Samsung, Nike" required>
            </div>
            <div class="form-group">
                <label for="brandImage">Brand Logo</label>
                <div class="file-upload-area" onclick="document.getElementById('brandImage').click()">
                    <input type="file" id="brandImage" name="image" accept="image/*" required style="display: none;">
                    <div class="file-upload-content">
                        <ion-icon name="image-outline"></ion-icon>
                        <p class="file-upload-text">Click to upload brand logo</p>
                        <p class="file-upload-hint">PNG, JPG, GIF up to 10MB</p>
                    </div>
                    <div class="image-preview" id="addImagePreview" style="display: none;">
                        <img id="addPreviewImg" src="" alt="Preview">
                        <button type="button" class="remove-preview" onclick="clearAddPreview()">
                            <ion-icon name="close-circle"></ion-icon>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeAddBrandModal()">Cancel</button>
                <button type="submit" class="btn-primary">
                    <ion-icon name="checkmark-outline"></ion-icon>
                    Create Brand
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Brand Modal -->
<div class="modal-overlay" id="editBrandModal" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Edit Brand</h2>
            <button class="modal-close" onclick="closeEditBrandModal()">
                <ion-icon name="close-outline"></ion-icon>
            </button>
        </div>
        <form id="editBrandForm" method="post" enctype="multipart/form-data" class="modal-form">
            <div class="form-group">
                <label for="editBrandName">Brand Name</label>
                <input type="text" id="editBrandName" name="name" required>
            </div>
            <div class="form-group">
                <label for="editBrandImage">Brand Logo (Leave empty to keep current)</label>
                <div class="file-upload-area" onclick="document.getElementById('editBrandImage').click()">
                    <input type="file" id="editBrandImage" name="image" accept="image/*" style="display: none;">
                    <div class="file-upload-content" id="editUploadContent">
                        <ion-icon name="image-outline"></ion-icon>
                        <p class="file-upload-text">Click to change brand logo</p>
                        <p class="file-upload-hint">PNG, JPG, GIF up to 10MB</p>
                    </div>
                    <div class="image-preview" id="editImagePreview" style="display: none;">
                        <img id="editPreviewImg" src="" alt="Preview">
                        <button type="button" class="remove-preview" onclick="clearEditPreview()">
                            <ion-icon name="close-circle"></ion-icon>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeEditBrandModal()">Cancel</button>
                <button type="submit" class="btn-primary">
                    <ion-icon name="checkmark-outline"></ion-icon>
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Add Brand Modal Functions
    function openAddBrandModal() {
        document.getElementById('addBrandModal').style.display = 'flex';
        setTimeout(() => {
            document.getElementById('brandName').focus();
        }, 100);
    }

    function closeAddBrandModal() {
        document.getElementById('addBrandModal').style.display = 'none';
        document.getElementById('addBrandForm').reset();
        clearAddPreview();
    }

    // Edit Brand Functions
    function editBrand(id) {
        const brandCards = document.querySelectorAll('.brand-card');
        let brandData = null;
        
        brandCards.forEach(card => {
            const editBtn = card.querySelector('button[onclick^="editBrand"]');
            if (editBtn && editBtn.getAttribute('onclick').includes(id)) {
                const name = card.querySelector('.brand-name').textContent.trim();
                const img = card.querySelector('.brand-image img');
                brandData = { 
                    id, 
                    name, 
                    image: img ? img.src : null,
                    imageSrc: img ? img.getAttribute('src') : null
                };
            }
        });

        if (brandData) {
            document.getElementById('editBrandName').value = brandData.name;
            
            // Show current image
            if (brandData.imageSrc) {
                const preview = document.getElementById('editImagePreview');
                const img = document.getElementById('editPreviewImg');
                img.src = brandData.imageSrc;
                preview.style.display = 'flex';
                document.getElementById('editUploadContent').style.display = 'none';
            }
            
            document.getElementById('editBrandModal').style.display = 'flex';
            
            // Update form action
            const form = document.getElementById('editBrandForm');
            form.action = `/brand/edit/${id}?_method=PUT`;
        }
    }

    function closeEditBrandModal() {
        document.getElementById('editBrandModal').style.display = 'none';
        clearEditPreview();
    }

    // Delete Brand Function
    function confirmDeleteBrand(id, name) {
        Swal.fire({
            title: 'Delete Brand',
            text: `Are you sure you want to delete "${name}"? This action cannot be undone.`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#FF3B30',
            cancelButtonColor: '#8E8E93',
            confirmButtonText: 'Delete',
            cancelButtonText: 'Cancel',
            customClass: {
                popup: 'modern-alert',
                confirmButton: 'modern-confirm-btn',
                cancelButton: 'modern-cancel-btn'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/brand/delete/${id}?_method=DELETE`;
                document.body.appendChild(form);
                form.submit();
            }
        });
    }

    // Refresh Brands
    function refreshBrands() {
        window.location.reload();
    }

    // Image Preview for Add
    document.getElementById('brandImage').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                const preview = document.getElementById('addImagePreview');
                const img = document.getElementById('addPreviewImg');
                img.src = event.target.result;
                preview.style.display = 'flex';
                document.querySelector('#addBrandModal .file-upload-content').style.display = 'none';
            };
            reader.readAsDataURL(file);
        }
    });

    function clearAddPreview() {
        const preview = document.getElementById('addImagePreview');
        const content = document.querySelector('#addBrandModal .file-upload-content');
        preview.style.display = 'none';
        content.style.display = 'flex';
        document.getElementById('addPreviewImg').src = '';
        document.getElementById('brandImage').value = '';
    }

    // Image Preview for Edit
    document.getElementById('editBrandImage').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                const preview = document.getElementById('editImagePreview');
                const img = document.getElementById('editPreviewImg');
                img.src = event.target.result;
                preview.style.display = 'flex';
                document.getElementById('editUploadContent').style.display = 'none';
            };
            reader.readAsDataURL(file);
        }
    });

    function clearEditPreview() {
        const preview = document.getElementById('editImagePreview');
        const content = document.getElementById('editUploadContent');
        preview.style.display = 'none';
        content.style.display = 'flex';
        document.getElementById('editPreviewImg').src = '';
        document.getElementById('editBrandImage').value = '';
    }

    // Close modals when clicking outside
    window.onclick = function(event) {
        const addModal = document.getElementById('addBrandModal');
        const editModal = document.getElementById('editBrandModal');
        
        if (event.target === addModal) {
            closeAddBrandModal();
        }
        if (event.target === editModal) {
            closeEditBrandModal();
        }
    }

    // Close modals with Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeAddBrandModal();
            closeEditBrandModal();
        }
    });
</script>

