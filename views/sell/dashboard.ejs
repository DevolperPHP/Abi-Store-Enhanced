<%- include("../layout/navbar") -%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Sales History</h1>
        <p class="dashboard-subtitle">View and manage all sales transactions</p>
    </div>

    <!-- Premium Inventory Controls -->
    <div class="premium-inventory-controls">
        <div class="controls-header">
            <div class="header-content">
                <div class="header-icon">
                    <ion-icon name="bag-handle-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="controls-title">Sales Management</h2>
                    <p class="controls-subtitle">Track orders, search, and filter sales history</p>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" onclick="refreshPage()">
                    <ion-icon name="refresh-outline"></ion-icon>
                    Refresh
                </button>
                <button class="btn-primary" onclick="window.location.href='/sell/new'">
                    <ion-icon name="add-outline"></ion-icon>
                    New Sale
                </button>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="search-filters-card">
        <div class="filters-grid">
            <!-- Search by Name -->
            <div class="filter-group">
                <label class="filter-label">
                    <ion-icon name="search-outline"></ion-icon>
                    Search by Name
                </label>
                <div class="autocomplete-container">
                    <input type="text" id="myInput" class="filter-input" placeholder="Type customer name..." autocomplete="off">
                    <div id="autocomplete-results" class="autocomplete-results"></div>
                </div>
            </div>

            <!-- Search by Phone -->
            <div class="filter-group">
                <label class="filter-label">
                    <ion-icon name="call-outline"></ion-icon>
                    Phone Number
                </label>
                <input type="text" id="phoneSearch" class="filter-input" placeholder="Enter phone number" onkeypress="if(event.key==='Enter') searchByPhone()">
            </div>

            <!-- Date Range -->
            <div class="filter-group full-width">
                <label class="filter-label">
                    <ion-icon name="calendar-outline"></ion-icon>
                    Date Range
                </label>
                <div class="date-range">
                    <input type="date" id="startDate" class="filter-input">
                    <span class="date-separator">to</span>
                    <input type="date" id="endDate" class="filter-input">
                    <button class="filter-btn" onclick="searchByDate()">
                        <ion-icon name="search-outline"></ion-icon>
                    </button>
                </div>
            </div>

            <!-- Status Filter -->
            <div class="filter-group">
                <label class="filter-label">
                    <ion-icon name="filter-outline"></ion-icon>
                    Filter
                </label>
                <select class="filter-select" onchange="applyFilter(this.value)">
                    <option value="">All Orders</option>
                    <option value="/sell/search-by-filter/newest">Newest First</option>
                    <option value="/sell/search-by-filter/oldest">Oldest First</option>
                    <option value="/sell/search-by-filter/pending">Pending Orders</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Sales Cards Grid -->
    <div class="sales-grid" id="salesGrid">
        <% if (sell && sell.length > 0) { %>
            <% sell.forEach((order, index) => { %>
                <div class="sale-card <%= order.isCashier === true ? 'cashier-sale' : '' %>" onclick="handleOrderClick('<%= order._id %>', <%= order.products ? order.products.length : 0 %>)">
                    <div class="sale-header">
                        <div class="sale-icon">
                            <% if (order.isShop === true) { %>
                                <ion-icon name="storefront-outline"></ion-icon>
                            <% } else if (order.isCashier === true) { %>
                                <ion-icon name="cash-outline"></ion-icon>
                            <% } else { %>
                                <ion-icon name="bag-handle-outline"></ion-icon>
                            <% } %>
                        </div>
                        <div class="sale-status-badge <%= order.status %>">
                            <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                        </div>
                    </div>
                    
                    <div class="sale-info">
                        <div class="info-row">
                            <ion-icon name="calendar-outline"></ion-icon>
                            <span><%= order.Date %></span>
                        </div>
                        <div class="info-row">
                            <ion-icon name="call-outline"></ion-icon>
                            <span><%= order.phone %></span>
                        </div>
                        <div class="info-row address-row">
                            <ion-icon name="location-outline"></ion-icon>
                            <span><%= order.adress %></span>
                        </div>
                        <% if (order.note) { %>
                            <div class="info-row">
                                <ion-icon name="document-text-outline"></ion-icon>
                                <span class="note-text"><%= order.note %></span>
                            </div>
                        <% } %>
                    </div>

                    <div class="sale-footer">
                        <div class="order-id">
                            <ion-icon name="receipt-outline"></ion-icon>
                            <span>#<%= order.bid %></span>
                        </div>
                        <div class="order-total">
                            <%= (order.total || (order.products ? order.products.reduce((sum, p) => sum + (p.total || 0), 0) : 0)).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state-card">
                <div class="empty-icon">
                    <ion-icon name="bag-handle-outline"></ion-icon>
                </div>
                <h3 class="empty-title">No Sales Yet</h3>
                <p class="empty-description">
                    Start selling by creating your first order. Click the "New Sale" button to begin.
                </p>
                <button class="btn-primary" onclick="window.location.href='/sell/new'">
                    <ion-icon name="add-outline"></ion-icon>
                    Create New Sale
                </button>
            </div>
        <% } %>
    </div>

    <!-- Load More Button (for pagination) -->
    <% if (sell && sell.length > 0) { %>
        <div class="load-more-container">
            <button class="btn-secondary" id="loadMoreBtn" onclick="loadMore()">
                <ion-icon name="chevron-down-outline"></ion-icon>
                Load More
            </button>
        </div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
<script>
    let page = 1;
    let loading = false;
    const allSalesData = <%- JSON.stringify(data || []) %>;

    // Autocomplete functionality
    function initAutocomplete() {
        const fuse = new Fuse(allSalesData, {
            threshold: 0.4,
            keys: ['name']
        });

        const input = document.getElementById('myInput');
        const resultsDiv = document.getElementById('autocomplete-results');

        input.addEventListener('input', function() {
            const value = this.value;
            
            if (value.length < 2) {
                resultsDiv.innerHTML = '';
                resultsDiv.style.display = 'none';
                return;
            }

            const results = fuse.search(value);
            
            if (results.length === 0) {
                resultsDiv.innerHTML = '<div class="autocomplete-item no-results">No matches found</div>';
                resultsDiv.style.display = 'block';
                return;
            }

            resultsDiv.innerHTML = results.map(result => `
                <div class="autocomplete-item" onclick="window.location.href='/sell/search-by-name/${encodeURIComponent(result.item)}'">
                    ${highlightMatch(result.item, value)}
                </div>
            `).join('');
            
            resultsDiv.style.display = 'block';
        });

        // Close autocomplete when clicking outside
        document.addEventListener('click', function(e) {
            if (!input.contains(e.target) && !resultsDiv.contains(e.target)) {
                resultsDiv.style.display = 'none';
            }
        });
    }

    function highlightMatch(text, query) {
        const regex = new RegExp(`(${query})`, 'gi');
        return text.replace(regex, '<strong>$1</strong>');
    }

    // Search functions
    function searchByPhone() {
        const phone = document.getElementById('phoneSearch').value.trim();
        if (phone) {
            window.location.href = `/sell/search-by-phone/${encodeURIComponent(phone)}`;
        }
    }

    function searchByDate() {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        
        if (startDate && endDate) {
            window.location.href = `/sell/search-by-date/${startDate}/${endDate}`;
        } else {
            Swal.fire({
                icon: 'warning',
                title: 'Date Required',
                text: 'Please select both start and end dates'
            });
        }
    }

    function applyFilter(url) {
        if (url) {
            window.location.href = url;
        }
    }

    function refreshPage() {
        window.location.reload();
    }

    function handleOrderClick(orderId, productCount) {
        if (productCount === 0) {
            Swal.fire({
                title: 'Empty Order',
                text: 'This order contains no items and cannot be viewed.',
                icon: 'info',
                background: 'linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%)',
                confirmButtonColor: '#007AFF',
                confirmButtonText: 'OK',
                customClass: {
                    popup: 'empty-order-popup',
                    confirmButton: 'empty-order-confirm-btn'
                },
                showClass: {
                    popup: 'animate__animated animate__fadeInDown'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutUp'
                }
            });
        } else {
            window.location.href = `/sell/get-data/${orderId}`;
        }
    }

    // Infinite scroll
    window.addEventListener('scroll', async () => {
        if (loading) return;

        const { scrollTop, scrollHeight, clientHeight } = document.documentElement;
        
        if (scrollTop + clientHeight >= scrollHeight - 200) {
            loading = true;
            page++;

            try {
                const res = await fetch(`/sell/api?page=${page}`);
                const data = await res.json();

                if (data.length === 0) {
                    document.getElementById('loadMoreBtn').style.display = 'none';
                    return;
                }

                const container = document.getElementById('salesGrid');
                data.forEach(item => {
                    const card = createSaleCard(item);
                    container.appendChild(card);
                });
            } catch (err) {
                console.error('Error loading more sales:', err);
            } finally {
                loading = false;
            }
        }
    });

    function createSaleCard(order) {
        const card = document.createElement('div');
        card.className = `sale-card ${order.isCashier === true ? 'cashier-sale' : ''}`;
        card.onclick = () => handleOrderClick(order._id, order.products ? order.products.length : 0);

        let iconName = 'bag-handle-outline';
        if (order.isShop) iconName = 'storefront-outline';
        else if (order.isCashier) iconName = 'cash-outline';

        card.innerHTML = `
            <div class="sale-header">
                <div class="sale-icon">
                    <ion-icon name="${iconName}"></ion-icon>
                </div>
                <div class="sale-status-badge ${order.status}">
                    ${order.status.charAt(0).toUpperCase() + order.status.slice(1)}
                </div>
            </div>
            <div class="sale-info">
                <div class="info-row">
                    <ion-icon name="calendar-outline"></ion-icon>
                    <span>${order.Date}</span>
                </div>
                <div class="info-row">
                    <ion-icon name="call-outline"></ion-icon>
                    <span>${order.phone}</span>
                </div>
                <div class="">
                    <ioninfo-row address-row-icon name="location-outline"></ion-icon>
                    <span>${order.adress}</span>
                </div>
            </div>
            <div class="sale-footer">
                <div class="order-id">
                    <ion-icon name="receipt-outline"></ion-icon>
                    <span>#${order.bid}</span>
                </div>
                <div class="order-total">
                    ${(order.total || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD
                </div>
            </div>
        `;

        return card;
    }

    // Initialize on page load
    window.addEventListener('DOMContentLoaded', function() {
        initAutocomplete();
        
        // Handle Enter key in phone search
        document.getElementById('phoneSearch').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchByPhone();
            }
        });
    });
</script>

