<%- include("../layout/navbar") -%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Product Search Results</h1>
        <p class="dashboard-subtitle">Select products to add to your cart</p>
    </div>

    <!-- Search Results Section -->
    <% if (products && products.length > 0) { %>
        <div class="search-results-card">
            <div class="card-header">
                <div class="header-icon">
                    <ion-icon name="search-circle-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="card-title">Found Products</h2>
                    <p class="card-subtitle"><%= products.length %> products found</p>
                </div>
                <div class="header-actions">
                    <button class="btn-secondary" onclick="window.location.href='/sell/new'">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                        Back to Sale
                    </button>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="products-grid">
            <% products.forEach((data) => { %>
                <div class="product-card <%= data.qty <= 0 ? 'out-of-stock-card' : '' %>">
                    <div class="product-image-container">
                        <img src="/upload/images/<%= data.image %>" alt="<%= data.name %>" class="product-image">
                        <div class="product-badge">
                            <ion-icon name="cube-outline"></ion-icon>
                        </div>
                        <% if (data.qty <= 0) { %>
                            <div class="out-of-stock-badge">
                                <ion-icon name="close-circle-outline"></ion-icon>
                                <span>Out of Stock</span>
                            </div>
                        <% } %>
                    </div>

                    <div class="product-details">
                        <h3 class="product-name"><%= data.name %></h3>

                        <div class="product-meta">
                            <% if (data.size) { %>
                                <span class="meta-badge">
                                    <ion-icon name="resize-outline"></ion-icon>
                                    <%= data.size %>
                                </span>
                            <% } %>

                            <% if (data.colorName) { %>
                                <span class="meta-badge color-badge">
                                    <div class="color-circle" style="background-color: <%= data.color %>"></div>
                                    <%= data.colorName %>
                                </span>
                            <% } %>
                        </div>

                        <div class="product-pricing">
                            <div class="price-row">
                                <span class="price-label">
                                    <ion-icon name="pricetag-outline"></ion-icon>
                                    Buying Price
                                </span>
                                <span class="price-value">
                                    <%= data.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                                </span>
                            </div>
                            <div class="price-row selling">
                                <span class="price-label">
                                    <ion-icon name="cash-outline"></ion-icon>
                                    Selling Price
                                </span>
                                <span class="price-value">
                                    <%= data.sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="product-actions">
                        <% if (data.qty > 0) { %>
                            <button class="action-btn primary" onclick="event.stopPropagation(); showQuantityModal('<%= data.id %>', '<%= data.name.replace(/'/g, "\\'") %>', '<%= data.size || '' %>', <%= data.stock %>, <%= data.qty %>)">
                                <ion-icon name="add-circle-outline"></ion-icon>
                                Add to Cart
                            </button>
                        <% } else { %>
                            <button class="action-btn primary disabled" disabled>
                                <ion-icon name="close-circle-outline"></ion-icon>
                                Out of Stock
                            </button>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <!-- Empty State -->
        <div class="empty-state-card">
            <div class="empty-icon">
                <ion-icon name="search-outline"></ion-icon>
            </div>
            <h3 class="empty-title">No Products Found</h3>
            <p class="empty-description">
                We couldn't find any products matching your search. Try a different name or size.
            </p>
            <div class="empty-actions">
                <button class="btn-secondary" onclick="window.location.href='/sell/new'">
                    <ion-icon name="arrow-back-outline"></ion-icon>
                    Back to Sale
                </button>
                <button class="btn-primary" onclick="window.location.href='/storage'">
                    <ion-icon name="cube-outline"></ion-icon>
                    Browse Products
                </button>
            </div>
        </div>
    <% } %>
</div>

<script>
    // Auto-focus back to new sale on page load
    window.addEventListener('DOMContentLoaded', function() {
        // Could add any initialization logic here
    });

    // Show quantity modal with Apple-inspired design
    function showQuantityModal(productId, productName, productSize, stock, availableQty) {
        // Check if out of stock
        if (availableQty <= 0) {
            Swal.fire({
                icon: 'error',
                title: 'Out of Stock',
                text: 'This product is currently out of stock',
                confirmButtonColor: '#007AFF',
                confirmButtonText: 'OK',
                customClass: {
                    popup: 'out-of-stock-popup'
                }
            });
            return;
        }

        const sizeText = productSize ? ` - ${productSize}` : '';
        const displayName = `${productName}${sizeText}`;

        Swal.fire({
            title: 'Add to Cart',
            html: `
                <div class="quantity-modal">
                    <div class="product-info">
                        <div class="product-icon">
                            <ion-icon name="cube-outline"></ion-icon>
                        </div>
                        <div class="product-details">
                            <h3 class="product-title">${displayName}</h3>
                            <div class="stock-info">
                                <ion-icon name="storefront-outline"></ion-icon>
                                <span>Available: ${availableQty} units</span>
                            </div>
                        </div>
                    </div>
                    <div class="quantity-section">
                        <label class="quantity-label">
                            <ion-icon name="numbers-outline"></ion-icon>
                            Enter Quantity
                        </label>
                        <input type="number" id="quantity-input" class="quantity-input" min="1" max="${availableQty}" value="1" placeholder="Quantity">
                        <div class="stock-warning" id="stock-warning" style="display: none;">
                            <ion-icon name="warning-outline"></ion-icon>
                            <span>Quantity exceeds available stock!</span>
                        </div>
                    </div>
                </div>
            `,
            showCancelButton: true,
            showConfirmButton: true,
            cancelButtonText: 'Cancel',
            confirmButtonText: 'Add to Cart',
            cancelButtonColor: '#8E8E93',
            confirmButtonColor: '#34C759',
            width: '500px',
            padding: '20px',
            customClass: {
                popup: 'quantity-modal-popup',
                cancelButton: 'swal-cancel-btn',
                confirmButton: 'swal-confirm-btn'
            },
            didOpen: () => {
                const input = document.getElementById('quantity-input');
                const warning = document.getElementById('stock-warning');

                input.addEventListener('input', (e) => {
                    const value = parseInt(e.target.value);
                    if (value > availableQty) {
                        warning.style.display = 'flex';
                        input.style.borderColor = '#FF3B30';
                    } else {
                        warning.style.display = 'none';
                        input.style.borderColor = '#e5e5ea';
                    }
                });

                input.focus();
            },
            preConfirm: () => {
                const qty = parseInt(document.getElementById('quantity-input').value);

                if (!qty || qty < 1) {
                    Swal.showValidationMessage('Please enter a valid quantity');
                    return false;
                }

                if (qty > availableQty) {
                    Swal.showValidationMessage(`Only ${availableQty} units available in stock`);
                    return false;
                }

                // Submit form programmatically
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/sell/add/${productId}?_method=PUT`;

                const qtyInput = document.createElement('input');
                qtyInput.type = 'hidden';
                qtyInput.name = 'qty';
                qtyInput.value = qty;

                form.appendChild(qtyInput);
                document.body.appendChild(form);
                form.submit();

                return false; // Prevent SweetAlert from closing
            }
        });
    }
</script>

