<%- include("../layout/navbar") -%>

<% if(uniqueErr.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Item already added',
            text: 'This item has already been added'
        })
    </script>
<%}%>

<% if(err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Quantity is not enough',
            text: 'You are trying to sell more than you have in storage of this item'
        })
    </script>
<%}%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Edit Order</h1>
        <p class="dashboard-subtitle">Add or remove items and update customer details</p>
    </div>

    <!-- Add Products Section -->
    <div class="add-products-card">
        <div class="card-header">
            <div class="header-icon">
                <ion-icon name="add-circle-outline"></ion-icon>
            </div>
            <div class="header-text">
                <h2 class="card-title">Add Products</h2>
                <p class="card-subtitle">Search for products to add to this order</p>
            </div>
        </div>

        <div class="autocomplete" style="width:100%; max-width: 500px;">
            <input autocomplete="off" id="myInput" type="text" class="search-input" placeholder="Search for item">
            <div id="autocomplete-list" class="autocomplete-items"></div>
        </div>
    </div>

    <!-- Order Items Section -->
    <% if (data.products && data.products.length > 0) { %>
        <div class="cart-card">
            <div class="cart-header">
                <div class="header-icon">
                    <ion-icon name="basket-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="card-title">Order Items</h2>
                    <p class="card-subtitle"><%= data.products.length %> items in this order</p>
                </div>
            </div>

            <div class="cart-items">
                <% for (let i = 0; i < data.products.length; i++) { %>
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/upload/images/<%= data.products[i].image%>" alt="<%= data.products[i].name %>">
                        </div>
                        <div class="item-details">
                            <h3 class="item-name"><%= data.products[i].name%></h3>
                            <div class="item-meta">
                                <span class="meta-badge">
                                    <ion-icon name="resize-outline"></ion-icon>
                                    <%= data.products[i].size%>
                                </span>
                                <span class="meta-badge color-badge">
                                    <div class="color-circle" style="background-color: <%= data.products[i].color%>"></div>
                                    Color
                                </span>
                                <span class="meta-badge">
                                    <ion-icon name="cash-outline"></ion-icon>
                                    <%= data.products[i].price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "," )%> IQD
                                </span>
                                <span class="meta-badge">
                                    <ion-icon name="cube-outline"></ion-icon>
                                    <%= data.products[i].type%>
                                </span>
                            </div>
                        </div>
                        <div class="item-actions">
                            <div class="quantity-display">
                                <span class="quantity-label">Qty:</span>
                                <span class="quantity-value"><%= data.products[i].qty%></span>
                            </div>
                            <div class="item-total">
                                <%= (data.products[i].price * data.products[i].qty).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                            </div>
                            <div class="action-buttons">
                                <% if(data.isShop == true){%>
                                    <form action="/sell/edit/remove-shop/<%= data.id%>/<%= data.products[i]._id%>?_method=PUT" method="post" style="display: inline;">
                                        <button class="action-btn delete-btn" type="submit" title="Remove item">
                                            <ion-icon name="trash-outline"></ion-icon>
                                        </button>
                                    </form>
                                <%} else {%>
                                    <button class="action-btn delete-btn" onclick="window.location.href='/sell/edit-return/<%= data._id%>/<%= data.products[i]._id%>'" title="Remove item">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </button>
                                <%} %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Cart Summary -->
            <div class="cart-summary">
                <% if(data.total == ""){%>
                    <div class="summary-row total-row">
                        <span class="summary-label">Total:</span>
                        <span class="summary-value"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                    </div>
                <%} else {%>
                    <div class="summary-row">
                        <span class="summary-label">Subtotal:</span>
                        <span class="summary-value"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                    </div>
                    <div class="summary-row discount-row">
                        <span class="summary-label">Discount:</span>
                        <span class="summary-value discount-value">-<%= (Number(total) - Number(data.total)).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                    </div>
                    <div class="summary-row total-row">
                        <span class="summary-label">Final Total:</span>
                        <span class="summary-value"><%= data.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                    </div>
                <%} %>
            </div>

            <!-- Discount Section -->
            <div class="discount-section">
                <button class="btn-secondary" onclick="toggleDiscount()">
                    <ion-icon name="pricetags-outline"></ion-icon>
                    Apply Discount
                </button>
                <div class="discount-input-group" id="discountGroup" style="display: none;">
                    <input type="number" id="discount" placeholder="Discount amount" onkeyup="discount()">
                    <button class="btn-submit" onclick="discount()">
                        <ion-icon name="checkmark-outline"></ion-icon>
                        Apply
                    </button>
                    <button class="btn-secondary" onclick="refresh()">
                        <ion-icon name="refresh-outline"></ion-icon>
                    </button>
                </div>
            </div>
        </div>

        <!-- Customer Information & Checkout -->
        <div class="checkout-card">
            <div class="card-header">
                <div class="header-icon">
                    <ion-icon name="card-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="card-title">Customer Information</h2>
                    <p class="card-subtitle">Update customer details</p>
                </div>
            </div>

            <form action="/sell/edit/confirm/<%= data.id%>?_method=PUT" method="post" class="checkout-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <ion-icon name="person-outline"></ion-icon>
                            Customer Name
                        </label>
                        <input type="text" name="name" class="form-input" value="<%= data.name%>" placeholder="Enter customer name" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <ion-icon name="call-outline"></ion-icon>
                            Phone Number
                        </label>
                        <input type="text" name="phone" class="form-input" value="<%= data.phone%>" placeholder="Enter phone number" required>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            <ion-icon name="location-outline"></ion-icon>
                            Address
                        </label>
                        <input type="text" name="adress" class="form-input" value="<%= data.adress%>" placeholder="Enter address" required>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            <ion-icon name="document-text-outline"></ion-icon>
                            Note (Optional)
                        </label>
                        <textarea name="note" class="form-textarea" rows="3" placeholder="Add any special notes or instructions"><%= data.note%></textarea>
                    </div>
                </div>

                <input type="hidden" name="total" id="total_price">
                <input type="hidden" id="total" value="<%= total%>">

                <div class="checkout-actions">
                    <button type="button" class="btn-secondary" onclick="window.location.href='/sell/dashboard'">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                        Cancel
                    </button>
                    <button type="submit" class="btn-primary btn-large">
                        <ion-icon name="checkmark-circle-outline"></ion-icon>
                        Confirm Changes
                    </button>
                </div>
            </form>
        </div>
    <% } else { %>
        <!-- Empty Cart State -->
        <div class="empty-state-card">
            <div class="empty-icon">
                <ion-icon name="basket-outline"></ion-icon>
            </div>
            <h3 class="empty-title">No Items in Order</h3>
            <p class="empty-description">
                This order doesn't have any items yet. Search and add products to continue.
            </p>
        </div>
    <% } %>
</div>

<script>
    // Discount functionality
    function toggleDiscount() {
        const discountGroup = document.getElementById('discountGroup');
        discountGroup.style.display = discountGroup.style.display === 'none' ? 'flex' : 'none';
    }

    function discount() {
        const discountInput = document.getElementById("discount");
        const totalInput = document.getElementById("total").value;
        const total = parseInt(totalInput.replace(/,/g, ""));
        const totalPriceInput = document.getElementById("total_price");

        const newPrice = Number(total) - Number(discountInput.value);
        if (newPrice < 0) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Discount',
                text: 'The discount value cannot exceed the total price'
            });
        } else {
            totalPriceInput.value = newPrice;
            Swal.fire({
                icon: 'success',
                title: 'Discount Applied',
                text: `New total: ${newPrice.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD`,
                timer: 2000,
                timerProgressBar: true,
                showConfirmButton: false
            });
        }
    }

    function refresh() {
        window.location.reload();
    }

    // Enhanced autocomplete functionality
    function autocomplete(inp, arr) {
        var currentFocus;
        inp.addEventListener("input", function(e) {
            var a, b, i, val = this.value;
            closeAllLists();
            if (!val) { return false; }
            currentFocus = -1;
            a = document.createElement("DIV");
            a.setAttribute("id", this.id + "autocomplete-list");
            a.setAttribute("class", "autocomplete-items");
            this.parentNode.appendChild(a);
            for (i = 0; i < arr.length; i++) {
                if (arr[i].substr(0, val.length).toUpperCase() == val.toUpperCase()) {
                    b = document.createElement("DIV");
                    b.setAttribute("class", "autocomplete-item");
                    b.innerHTML = "<strong>" + arr[i].substr(0, val.length) + "</strong>";
                    b.innerHTML += arr[i].substr(val.length);
                    b.innerHTML += "<input type='hidden' value='" + arr[i] + "'>";
                    b.addEventListener("click", function(e) {
                        window.location.href = `/sell/edit/search/<%= data.id%>/${String(this.getElementsByTagName("input")[0].value)}`;
                        closeAllLists();
                    });
                    a.appendChild(b);
                }
            }
        });
        inp.addEventListener("keydown", function(e) {
            var x = document.getElementById(this.id + "autocomplete-list");
            if (x) x = x.getElementsByTagName("div");
            if (e.keyCode == 40) {
                currentFocus++;
                addActive(x);
            } else if (e.keyCode == 38) {
                currentFocus--;
                addActive(x);
            } else if (e.keyCode == 13) {
                e.preventDefault();
                if (currentFocus > -1) {
                    if (x) x[currentFocus].click();
                }
            }
        });
        function addActive(x) {
            if (!x) return false;
            removeActive(x);
            if (currentFocus >= x.length) currentFocus = 0;
            if (currentFocus < 0) currentFocus = (x.length - 1);
            x[currentFocus].classList.add("autocomplete-active");
        }
        function removeActive(x) {
            for (var i = 0; i < x.length; i++) {
                x[i].classList.remove("autocomplete-active");
            }
        }
        function closeAllLists(elmnt) {
            var x = document.getElementsByClassName("autocomplete-items");
            for (var i = 0; i < x.length; i++) {
                if (elmnt != x[i] && elmnt != inp) {
                    x[i].parentNode.removeChild(x[i]);
                }
            }
        }
        document.addEventListener("click", function(e) {
            closeAllLists(e.target);
        });
    }

    // Initialize autocomplete
    const productData = "<%= uniqueArray%>".split(',');
    autocomplete(document.getElementById("myInput"), productData);

    // Auto-focus search input
    window.addEventListener('DOMContentLoaded', function() {
        document.getElementById('myInput').focus();
    });
</script>

<style>
    /* ===== AUTOCOMPLETE STYLES ===== */
    .autocomplete {
        position: relative;
        margin-top: 16px;
    }

    .autocomplete-items {
        position: absolute;
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-top: none;
        border-radius: 0 0 12px 12px;
        background: #ffffff;
        max-height: 300px;
        overflow-y: auto;
        z-index: 1000;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }

    .autocomplete-item {
        padding: 12px 16px;
        cursor: pointer;
        border-bottom: 1px solid rgba(0, 0, 0, 0.04);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .autocomplete-item:last-child {
        border-bottom: none;
    }

    .autocomplete-item:hover,
    .autocomplete-active {
        background: rgba(52, 199, 89, 0.08);
        transform: translateX(4px);
    }

    .autocomplete-item strong {
        color: #34C759;
        font-weight: 600;
    }

    /* ===== DISCOUNT SECTION ===== */
    .discount-section {
        padding: 24px;
        border-top: 1px solid rgba(0, 0, 0, 0.08);
        background: linear-gradient(180deg, #fafafa, #f5f5f7);
        display: flex;
        flex-direction: column;
        gap: 12px;
        align-items: flex-start;
    }

    .discount-input-group {
        display: flex;
        gap: 12px;
        width: 100%;
        max-width: 400px;
        animation: slideDown 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .discount-input-group input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        font-size: 16px;
        font-family: inherit;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .discount-input-group input:focus {
        outline: none;
        border-color: #34C759;
        box-shadow: 0 0 0 3px rgba(52, 199, 89, 0.1);
    }

    .discount-row {
        color: #FF3B30;
    }

    .discount-value {
        color: #FF3B30;
        font-weight: 600;
    }

    /* ===== BUTTONS ===== */
    .btn-submit {
        padding: 12px 24px;
        background: #34C759;
        color: #ffffff;
        border: none;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 500;
        font-family: inherit;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        white-space: nowrap;
    }

    .btn-submit:hover {
        background: #2db04c;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(52, 199, 89, 0.3);
    }

    .btn-submit:active {
        transform: translateY(0);
    }

    .btn-submit ion-icon {
        font-size: 18px;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 768px) {
        .discount-input-group {
            flex-direction: column;
        }

        .discount-input-group .btn-submit,
        .discount-input-group .btn-secondary {
            width: 100%;
            justify-content: center;
        }

        .cart-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .item-actions {
            width: 100%;
            justify-content: space-between;
        }
    }
</style>

