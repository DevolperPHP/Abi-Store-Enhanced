<%- include("../layout/navbar") -%>

<% if(uniqueErr.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Item already added',
            text: 'This item has already been added'
        })
    </script>
<%}%>

<% if(err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Quantity is not enough',
            text: 'You are trying to sell more than you have in storage of this item'
        })
    </script>
<%}%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="breadcrumb">
                <span class="breadcrumb-item">Orders</span>
                <ion-icon name="chevron-forward"></ion-icon>
                <span class="breadcrumb-item active">Edit Order</span>
            </div>
            <h1 class="dashboard-title">Edit Order</h1>
            <p class="dashboard-subtitle">Refine your order by adding or removing items and updating customer details</p>
        </div>
    </div>

    <!-- Add Products Section -->
    <div class="apple-card add-products-card">
        <div class="card-header">
            <div class="header-content">
                <div class="header-icon">
                    <div class="icon-circle">
                        <ion-icon name="add-circle"></ion-icon>
                    </div>
                </div>
                <div class="header-text">
                    <h2 class="card-title">Add Products</h2>
                    <p class="card-subtitle">Search our inventory to add items to this order</p>
                </div>
            </div>
        </div>

        <div class="search-container">
            <div class="autocomplete" style="width:100%; max-width: 600px;">
                <div class="search-input-wrapper">
                    <ion-icon name="search" class="search-icon"></ion-icon>
                    <input autocomplete="off" id="myInput" type="text" class="search-input" placeholder="Search for products...">
                    <div class="search-shortcut">âŒ˜K</div>
                </div>
                <div id="autocomplete-list" class="autocomplete-items"></div>
            </div>
        </div>
    </div>

    <!-- Order Items Section -->
    <% if (data.products && data.products.length > 0) { %>
        <div class="apple-card cart-card">
            <div class="card-header">
                <div class="header-content">
                    <div class="header-icon">
                        <div class="icon-circle">
                            <ion-icon name="bag"></ion-icon>
                        </div>
                    </div>
                    <div class="header-text">
                        <h2 class="card-title">Order Items</h2>
                        <p class="card-subtitle"><%= data.products.length %> <%= data.products.length === 1 ? 'item' : 'items' %> in this order</p>
                    </div>
                </div>
                <div class="header-actions">
                    <div class="item-count-badge">
                        <%= data.products.length %>
                    </div>
                </div>
            </div>

            <div class="cart-items">
                <% for (let i = 0; i < data.products.length; i++) { %>
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/upload/images/<%= data.products[i].image%>" alt="<%= data.products[i].name %>">
                            <div class="item-overlay">
                                <ion-icon name="eye"></ion-icon>
                            </div>
                        </div>
                        <div class="item-details">
                            <h3 class="item-name"><%= data.products[i].name%></h3>
                            <div class="item-meta">
                                <div class="meta-tags">
                                    <span class="meta-badge">
                                        <ion-icon name="resize"></ion-icon>
                                        <%= data.products[i].size%>
                                    </span>
                                    <span class="meta-badge color-badge">
                                        <div class="color-indicator" style="background-color: <%= data.products[i].color%>"></div>
                                        Color
                                    </span>
                                    <span class="meta-badge">
                                        <ion-icon name="pricetag"></ion-icon>
                                        <%= data.products[i].price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "," )%> IQD
                                    </span>
                                    <span class="meta-badge">
                                        <ion-icon name="cube"></ion-icon>
                                        <%= data.products[i].type%>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="item-actions">
                            <div class="quantity-section">
                                <span class="quantity-label">Quantity</span>
                                <div class="quantity-display">
                                    <span class="quantity-value"><%= data.products[i].qty%></span>
                                </div>
                            </div>
                            <div class="item-total">
                                <div class="total-label">Total</div>
                                <div class="total-amount"><%= (data.products[i].price * data.products[i].qty).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</div>
                            </div>
                            <div class="action-buttons">
                                <button class="action-btn edit-btn" onclick="editQuantity('<%= data._id%>', '<%= data.products[i]._id%>', <%= data.products[i].qty%>, <%= data.isShop %>)" title="Edit quantity">
                                    <ion-icon name="create"></ion-icon>
                                    <span>Edit Qty</span>
                                </button>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Cart Summary -->
            <div class="cart-summary">
                <div class="summary-header">
                    <h3>Order Summary</h3>
                </div>
                <div class="summary-content">
                    <% if(data.total == ""){%>
                        <div class="summary-row total-row">
                            <span class="summary-label">Total</span>
                            <span class="summary-value"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                        </div>
                    <%} else {%>
                        <div class="summary-row">
                            <span class="summary-label">Subtotal</span>
                            <span class="summary-value"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                        </div>
                        <div class="summary-row discount-row">
                            <span class="summary-label">
                                <ion-icon name="pricetags"></ion-icon>
                                Discount
                            </span>
                            <span class="summary-value discount-value">-<%= (Number(total) - Number(data.total)).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-row total-row">
                            <span class="summary-label">Final Total</span>
                            <span class="summary-value final-total"><%= data.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                        </div>
                    <%} %>
                </div>
            </div>

            <!-- Discount Section -->
            <div class="discount-section">
                <button class="discount-toggle-btn" onclick="toggleDiscount()">
                    <ion-icon name="pricetags"></ion-icon>
                    <span>Apply Discount</span>
                    <ion-icon name="chevron-down" class="toggle-arrow"></ion-icon>
                </button>
                <div class="discount-input-group" id="discountGroup" style="display: none;">
                    <div class="discount-input-wrapper">
                        <input type="number" id="discount" placeholder="Enter discount amount">
                        <div class="input-suffix">IQD</div>
                    </div>
                    <div class="discount-actions">
                        <button class="btn-secondary btn-ghost" onclick="refresh()">
                            <ion-icon name="refresh"></ion-icon>
                        </button>
                        <button class="btn-primary" onclick="discount()">
                            <ion-icon name="checkmark"></ion-icon>
                            <span>Apply</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Information & Checkout -->
        <div class="apple-card checkout-card">
            <div class="card-header">
                <div class="header-content">
                    <div class="header-icon">
                        <div class="icon-circle">
                            <ion-icon name="card"></ion-icon>
                        </div>
                    </div>
                    <div class="header-text">
                        <h2 class="card-title">Customer Information</h2>
                        <p class="card-subtitle">Update customer details for this order</p>
                    </div>
                </div>
            </div>

            <form action="/sell/edit/confirm/<%= data._id%>?_method=PUT" method="post" class="checkout-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <ion-icon name="person"></ion-icon>
                            <span>Customer Name</span>
                        </label>
                        <div class="input-wrapper">
                            <input type="text" name="name" class="form-input" value="<%= data.name%>" placeholder="Enter customer name" required>
                            <div class="input-focus-ring"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <ion-icon name="call"></ion-icon>
                            <span>Phone Number</span>
                        </label>
                        <div class="input-wrapper">
                            <input type="text" name="phone" class="form-input" value="<%= data.phone%>" placeholder="Enter phone number" required>
                            <div class="input-focus-ring"></div>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            <ion-icon name="location"></ion-icon>
                            <span>Address</span>
                        </label>
                        <div class="input-wrapper">
                            <input type="text" name="adress" class="form-input" value="<%= data.adress%>" placeholder="Enter customer address" required>
                            <div class="input-focus-ring"></div>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            <ion-icon name="document-text"></ion-icon>
                            <span>Order Notes <span class="optional-label">(Optional)</span></span>
                        </label>
                        <div class="input-wrapper">
                            <textarea name="note" class="form-textarea" rows="4" placeholder="Add any special instructions or notes"><%= data.note%></textarea>
                            <div class="input-focus-ring"></div>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="total" id="total_price">
                <input type="hidden" id="total" value="<%= total%>">

                <div class="checkout-actions">
                    <button type="button" class="btn-secondary btn-ghost" onclick="window.location.href='/sell/dashboard'">
                        <ion-icon name="arrow-back"></ion-icon>
                        <span>Cancel</span>
                    </button>
                    <button type="submit" class="btn-primary btn-large">
                        <ion-icon name="checkmark-circle"></ion-icon>
                        <span>Confirm Changes</span>
                    </button>
                </div>
            </form>
        </div>
    <% } else { %>
        <!-- Empty Cart State -->
        <div class="empty-state-card">
            <div class="empty-icon">
                <div class="empty-icon-circle">
                    <ion-icon name="bag"></ion-icon>
                </div>
            </div>
            <h3 class="empty-title">No Items in Order</h3>
            <p class="empty-description">
                This order is empty. Start by searching and adding products from our inventory to build your order.
            </p>
            <div class="empty-actions">
                <button class="btn-primary" onclick="document.getElementById('myInput').focus()">
                    <ion-icon name="search"></ion-icon>
                    <span>Start Shopping</span>
                </button>
            </div>
        </div>
    <% } %>
</div>

<script>
    // Discount functionality
    function toggleDiscount() {
        const discountGroup = document.getElementById('discountGroup');
        const toggleArrow = document.querySelector('.toggle-arrow');
        
        if (discountGroup.style.display === 'none' || discountGroup.style.display === '') {
            discountGroup.style.display = 'flex';
            toggleArrow.style.transform = 'rotate(180deg)';
        } else {
            discountGroup.style.display = 'none';
            toggleArrow.style.transform = 'rotate(0deg)';
        }
    }

    function discount() {
        const discountInput = document.getElementById("discount");
        const originalTotalInput = document.getElementById("total").value;
        const originalTotal = parseInt(originalTotalInput.replace(/,/g, ""));
        const totalPriceInput = document.getElementById("total_price");

        const discountValue = Number(discountInput.value);
        
        // Always calculate discount from the original total
        if (discountValue < 0) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Discount',
                text: 'Discount value cannot be negative'
            });
            return;
        }

        if (discountValue > originalTotal) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Discount',
                text: 'Discount value cannot exceed the original total price'
            });
            return;
        }

        // Calculate new total: always from original total, not from current discounted total
        const newTotal = originalTotal - discountValue;
        
        // Update the total price input
        totalPriceInput.value = newTotal;

        // Update the visual display in cart summary
        updateCartSummaryDisplay(originalTotal, discountValue, newTotal);

        // Show success message
        const discountText = discountValue === 0 ? 'No discount applied' : `${discountValue.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD discount applied`;
        const newTotalText = newTotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        
        Swal.fire({
            icon: 'success',
            title: 'Discount Applied',
            text: `${discountText}. New total: ${newTotalText} IQD`,
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false
        });
    }

    function updateCartSummaryDisplay(subtotal, discountAmount, finalTotal) {
        const summaryContent = document.querySelector('.summary-content');
        if (!summaryContent) return;

        if (discountAmount === 0) {
            // No discount - show simple total
            summaryContent.innerHTML = `
                <div class="summary-row total-row">
                    <span class="summary-label">Total</span>
                    <span class="summary-value">${subtotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD</span>
                </div>
            `;
        } else {
            // Show discount breakdown
            summaryContent.innerHTML = `
                <div class="summary-row">
                    <span class="summary-label">Subtotal</span>
                    <span class="summary-value">${subtotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD</span>
                </div>
                <div class="summary-row discount-row">
                    <span class="summary-label">
                        <ion-icon name="pricetags"></ion-icon>
                        Discount
                    </span>
                    <span class="summary-value discount-value">-${discountAmount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD</span>
                </div>
                <div class="summary-divider"></div>
                <div class="summary-row total-row">
                    <span class="summary-label">Final Total</span>
                    <span class="summary-value final-total">${finalTotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")} IQD</span>
                </div>
            `;
        }
    }

    function refresh() {
        window.location.reload();
    }

    // Edit quantity functionality
    function editQuantity(orderId, productId, currentQty, isCashier) {
        const storageType = isCashier ? 'store quantity (stock)' : 'main storage (qty)';
        
        Swal.fire({
            title: 'Edit Quantity',
            html: `
                <div style="text-align: left; margin-bottom: 20px;">
                    <p style="color: #6e6e73; margin-bottom: 10px;">Current quantity: <strong>${currentQty}</strong></p>
                    <p style="color: #6e6e73; margin-bottom: 15px;">This will affect: <strong>${storageType}</strong></p>
                    <label style="display: block; margin-bottom: 8px; color: #1d1d1f; font-weight: 600;">Enter new quantity:</label>
                </div>
            `,
            input: 'number',
            inputValue: currentQty,
            inputAttributes: {
                min: 0,
                step: 1,
                style: 'font-size: 16px; padding: 12px; border-radius: 8px; border: 2px solid #e5e5ea;'
            },
            showCancelButton: true,
            confirmButtonColor: '#007AFF',
            cancelButtonColor: '#8e8e93',
            confirmButtonText: 'Update Quantity',
            cancelButtonText: 'Cancel',
            customClass: {
                popup: 'quantity-edit-popup',
                confirmButton: 'quantity-confirm-btn',
                cancelButton: 'quantity-cancel-btn'
            },
            inputValidator: (value) => {
                if (!value || value < 0) {
                    return 'Please enter a valid quantity (minimum 0)';
                }
                if (value > 999999) {
                    return 'Quantity cannot exceed 999,999';
                }
            },
            preConfirm: (value) => {
                if (parseInt(value) === 0) {
                    return new Promise((resolve) => {
                        Swal.fire({
                            title: 'Remove Item?',
                            text: 'Setting quantity to 0 will remove this item from the order. Are you sure?',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#FF3B30',
                            cancelButtonColor: '#8e8e93',
                            confirmButtonText: 'Yes, remove it',
                            cancelButtonText: 'Cancel',
                            customClass: {
                                popup: 'remove-confirm-popup'
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                resolve(value);
                            } else {
                                resolve(false);
                            }
                        });
                    });
                }
                return value;
            }
        }).then((result) => {
            if (result.isConfirmed && result.value) {
                const newQty = parseInt(result.value);
                
                // Use the new unified route for both updates and removals
                updateItemQuantity(orderId, productId, newQty, isCashier);
            }
        });
    }

    function updateItemQuantity(orderId, productId, newQty, isCashier) {
        // Create form to update quantity (handles both updates and removals)
        const form = document.createElement('form');
        form.method = 'POST';
        
        // Use the unified route - backend will handle storage field selection
        form.action = `/sell/edit/update-qty/${orderId}/${productId}?_method=PUT`;
        
        const qtyInput = document.createElement('input');
        qtyInput.type = 'hidden';
        qtyInput.name = 'qty';
        qtyInput.value = newQty;
        
        form.appendChild(qtyInput);
        document.body.appendChild(form);
        
        // Show loading
        const loadingTitle = newQty === 0 ? 'Removing Item...' : 'Updating Quantity...';
        const loadingText = newQty === 0 ?
            'Please wait while we remove this item from the order.' :
            'Please wait while we update the item quantity.';
            
        Swal.fire({
            title: loadingTitle,
            text: loadingText,
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading()
            }
        });
        
        form.submit();
    }

    // Enhanced autocomplete functionality
    function autocomplete(inp, arr) {
        var currentFocus;
        inp.addEventListener("input", function(e) {
            var a, b, i, val = this.value;
            closeAllLists();
            if (!val) { return false; }
            currentFocus = -1;
            a = document.createElement("DIV");
            a.setAttribute("id", this.id + "autocomplete-list");
            a.setAttribute("class", "autocomplete-items");
            this.parentNode.appendChild(a);
            for (i = 0; i < arr.length; i++) {
                if (arr[i].substr(0, val.length).toUpperCase() == val.toUpperCase()) {
                    b = document.createElement("DIV");
                    b.setAttribute("class", "autocomplete-item");
                    b.innerHTML = "<strong>" + arr[i].substr(0, val.length) + "</strong>";
                    b.innerHTML += arr[i].substr(val.length);
                    b.innerHTML += "<input type='hidden' value='" + arr[i] + "'>";
                    b.addEventListener("click", function(e) {
                        window.location.href = `/sell/edit/search/<%= data._id%>/${String(this.getElementsByTagName("input")[0].value)}`;
                        closeAllLists();
                    });
                    a.appendChild(b);
                }
            }
        });
        inp.addEventListener("keydown", function(e) {
            var x = document.getElementById(this.id + "autocomplete-list");
            if (x) x = x.getElementsByTagName("div");
            if (e.keyCode == 40) {
                currentFocus++;
                addActive(x);
            } else if (e.keyCode == 38) {
                currentFocus--;
                addActive(x);
            } else if (e.keyCode == 13) {
                e.preventDefault();
                if (currentFocus > -1) {
                    if (x) x[currentFocus].click();
                }
            }
        });
        function addActive(x) {
            if (!x) return false;
            removeActive(x);
            if (currentFocus >= x.length) currentFocus = 0;
            if (currentFocus < 0) currentFocus = (x.length - 1);
            x[currentFocus].classList.add("autocomplete-active");
        }
        function removeActive(x) {
            for (var i = 0; i < x.length; i++) {
                x[i].classList.remove("autocomplete-active");
            }
        }
        function closeAllLists(elmnt) {
            var x = document.getElementsByClassName("autocomplete-items");
            for (var i = 0; i < x.length; i++) {
                if (elmnt != x[i] && elmnt != inp) {
                    x[i].parentNode.removeChild(x[i]);
                }
            }
        }
        document.addEventListener("click", function(e) {
            closeAllLists(e.target);
        });
    }

    // Initialize autocomplete
    const productData = "<%= uniqueArray%>".split(',');
    autocomplete(document.getElementById("myInput"), productData);

    // Auto-focus search input
    window.addEventListener('DOMContentLoaded', function() {
        document.getElementById('myInput').focus();
    });

    // Add Enter key support for discount input
    window.addEventListener('DOMContentLoaded', function() {
        const discountInput = document.getElementById('discount');
        if (discountInput) {
            discountInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    discount();
                }
            });
        }
    });
</script>

