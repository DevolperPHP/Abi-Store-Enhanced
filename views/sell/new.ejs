<%- include("../layout/navbar") -%>

<% if(err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Item already added',
            text: 'This item has already been added'
        })
    </script>
<%}%>

<% if(stock_err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Not enough stock',
            text: 'The quantity you are trying to sell exceeds available stock'
        })
    </script>
<%}%>

<% if(search_err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Item not found',
            text: 'The scanned or searched item was not found'
        })
    </script>
<%}%>

<% if(qty_err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Insufficient quantity',
            text: 'You are trying to sell more than available in storage'
        })
    </script>
<%}%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Create New Sale</h1>
        <p class="dashboard-subtitle">Add products to cart and complete the sale</p>
    </div>

    <!-- Add Products Section -->
    <div class="add-products-card">
        <div class="card-header">
            <div class="header-icon">
                <ion-icon name="add-circle-outline"></ion-icon>
            </div>
            <div class="header-text">
                <h2 class="card-title">Add Products</h2>
                <p class="card-subtitle">Scan barcode or search for products</p>
            </div>
        </div>

        <div class="add-methods">
            <!-- Barcode Scanner -->
            <div class="add-method">
                <label class="method-label">
                    <ion-icon name="barcode-outline"></ion-icon>
                    Scan Barcode
                </label>
                <div class="barcode-input-group">
                    <input type="text" id="codeInput" class="barcode-input" placeholder="Scan or enter barcode" autocomplete="off">
                    <button class="btn-submit" onclick="submitBarcode()">
                        <ion-icon name="add-outline"></ion-icon>
                        Add
                    </button>
                </div>
            </div>

            <!-- Product Search -->
            <div class="add-method">
                <label class="method-label">
                    <ion-icon name="search-outline"></ion-icon>
                    Search Products
                </label>
                <div class="search-container">
                    <input type="text" id="productSearch" class="search-input" placeholder="Type product name and size..." autocomplete="off">
                    <div id="searchResults" class="search-results-dropdown"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cart Items Section -->
    <% if (products && products.length > 0) { %>
        <div class="cart-card">
            <div class="cart-header">
                <div class="header-icon">
                    <ion-icon name="basket-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="card-title">Cart Items</h2>
                    <p class="card-subtitle"><%= totalQty %> items in cart</p>
                </div>
            </div>

            <div class="cart-items">
                <% products.forEach((product, index) => { %>
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/upload/images/<%= product.image %>" alt="<%= product.name %>">
                        </div>
                        <div class="item-details">
                            <h3 class="item-name"><%= product.name %></h3>
                            <div class="item-meta">
                                <span class="meta-badge">
                                    <ion-icon name="resize-outline"></ion-icon>
                                    <%= product.size %>
                                </span>
                                <span class="meta-badge color-badge">
                                    <div class="color-circle" style="background-color: <%= product.color %>"></div>
                                    Color
                                </span>
                            </div>
                            <div class="item-price">
                                <%= product.sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                            </div>
                        </div>
                        <div class="item-actions">
                            <div class="quantity-display">
                                <span class="quantity-label">Qty:</span>
                                <span class="quantity-value"><%= product.qty %></span>
                            </div>
                            <div class="item-total">
                                <%= (product.sell_price * product.qty).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                            </div>
                            <div class="action-buttons">
                                <button class="action-btn" onclick="window.location.href='/sell/edit-qty/<%= product._id %>'" title="Edit quantity">
                                    <ion-icon name="create-outline"></ion-icon>
                                </button>
                                <form action="/sell/remove/<%= product._id %>?_method=PUT" method="post" style="display: inline;">
                                    <button class="action-btn delete-btn" type="submit" title="Remove item">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Cart Summary -->
            <div class="cart-summary">
                <div class="summary-row">
                    <span class="summary-label">Total Quantity:</span>
                    <span class="summary-value"><%= totalQty.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> items</span>
                </div>
                <div class="summary-row total-row">
                    <span class="summary-label">Subtotal:</span>
                    <span class="summary-value"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD</span>
                </div>
            </div>
        </div>

        <!-- Customer Information & Checkout -->
        <div class="checkout-card">
            <div class="card-header">
                <div class="header-icon">
                    <ion-icon name="card-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="card-title">Customer Information</h2>
                    <p class="card-subtitle">Enter customer details to complete the sale</p>
                </div>
            </div>

            <form action="/sell/confirm" method="post" class="checkout-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <ion-icon name="person-outline"></ion-icon>
                            Customer Name
                        </label>
                        <input type="text" name="name" class="form-input" placeholder="Enter customer name" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <ion-icon name="call-outline"></ion-icon>
                            Phone Number
                        </label>
                        <input type="text" name="phone" class="form-input" placeholder="Enter phone number" required>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            <ion-icon name="location-outline"></ion-icon>
                            Address
                        </label>
                        <input type="text" name="adress" class="form-input" placeholder="Enter address" required>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            <ion-icon name="document-text-outline"></ion-icon>
                            Note (Optional)
                        </label>
                        <textarea name="note" class="form-textarea" rows="3" placeholder="Add any special notes or instructions"></textarea>
                    </div>
                </div>

                <input type="hidden" name="total" id="finalTotal" value="<%= total %>">

                <div class="checkout-actions">
                    <button type="button" class="btn-secondary" onclick="clearCart()">
                        <ion-icon name="trash-outline"></ion-icon>
                        Clear Cart
                    </button>
                    <button type="submit" class="btn-primary btn-large">
                        <ion-icon name="checkmark-circle-outline"></ion-icon>
                        Complete Sale
                    </button>
                </div>
            </form>
        </div>
    <% } else { %>
        <!-- Empty Cart State -->
        <div class="empty-state-card">
            <div class="empty-icon">
                <ion-icon name="basket-outline"></ion-icon>
            </div>
            <h3 class="empty-title">Cart is Empty</h3>
            <p class="empty-description">
                Start adding products to the cart by scanning a barcode or searching for items.
            </p>
        </div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
<script>
    const productData = <%- JSON.stringify(data || []) %>;
    const fuse = new Fuse(productData, {
        threshold: 0.4,
    });

    // Barcode submission
    function submitBarcode() {
        const codeInput = document.getElementById('codeInput');
        const codeValue = codeInput.value.trim();

        if (!codeValue) {
            Swal.fire({
                icon: 'error',
                title: 'Barcode Required',
                text: 'Please scan or enter a barcode'
            });
            return;
        }

        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/sell/add-by-code/' + encodeURIComponent(codeValue) + '?_method=PUT';
        form.style.display = 'none';
        document.body.appendChild(form);
        form.submit();
    }

    // Handle Enter key in barcode input
    document.getElementById('codeInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            submitBarcode();
        }
    });

    // Product search autocomplete
    const searchInput = document.getElementById('productSearch');
    const searchResults = document.getElementById('searchResults');

    searchInput.addEventListener('input', function() {
        const value = this.value;
        
        if (value.length < 2) {
            searchResults.style.display = 'none';
            return;
        }

        const results = fuse.search(value);
        
        if (results.length === 0) {
            searchResults.innerHTML = '<div class="search-item no-results">No products found</div>';
            searchResults.style.display = 'block';
            return;
        }

        searchResults.innerHTML = results.slice(0, 5).map(result => `
            <div class="search-item" onclick="selectProduct('${result.item}')">
                <ion-icon name="cube-outline"></ion-icon>
                <span>${result.item}</span>
            </div>
        `).join('');
        
        searchResults.style.display = 'block';
    });

    function selectProduct(productName) {
        window.location.href = '/sell/search/' + encodeURIComponent(productName);
        searchResults.style.display = 'none';
    }

    // Close search results when clicking outside
    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.style.display = 'none';
        }
    });

    // Clear cart
    function clearCart() {
        Swal.fire({
            title: 'Clear Cart',
            text: 'Are you sure you want to remove all items from the cart?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#FF3B30',
            cancelButtonColor: '#8E8E93',
            confirmButtonText: 'Yes, clear it',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/sell/new';
            }
        });
    }

    // Auto-focus barcode input on page load
    window.addEventListener('DOMContentLoaded', function() {
        document.getElementById('codeInput').focus();
    });
</script>
