        <div class="empty-state-card">
            <div class="empty-icon">
                <ion-icon name="basket-outline"></ion-icon>
            </div>
            <h3 class="empty-title">Cart is Empty</h3>
        </div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
<script>
    const productData = <%- JSON.stringify(data || []) %>;
    const fuse = new Fuse(productData, {
        threshold: 0.4,
    });

    // Barcode submission
    function submitBarcode() {
        const codeInput = document.getElementById('codeInput');
        const codeValue = codeInput.value.trim();

        if (!codeValue) {
            Swal.fire({
                icon: 'error',
                title: 'Barcode Required',
                text: 'Please scan or enter a barcode'
            });
            return;
        }

        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/sell/add-by-code/' + encodeURIComponent(codeValue) + '?_method=PUT';
        form.style.display = 'none';
        document.body.appendChild(form);
        form.submit();
    }

    // Handle Enter key in barcode input
    document.getElementById('codeInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            submitBarcode();
        }
    });

    // Product search autocomplete
    const searchInput = document.getElementById('productSearch');
    const searchResults = document.getElementById('searchResults');

    searchInput.addEventListener('input', function() {
        const value = this.value;

        if (value.length < 2) {
            searchResults.style.display = 'none';
            return;
        }

        const results = fuse.search(value);

        if (results.length === 0) {
            searchResults.innerHTML = '<div class="search-item no-results">No products found</div>';
            searchResults.style.display = 'block';
            return;
        }

        searchResults.innerHTML = results.slice(0, 5).map(result => `
            <div class="search-item" onclick="selectProduct('${result.item}')">
                <ion-icon name="cube-outline"></ion-icon>
                <span>${result.item}</span>
            </div>
        `).join('');

        searchResults.style.display = 'block';
    });

    function selectProduct(productName) {
        window.location.href = '/sell/search/' + encodeURIComponent(productName);
        searchResults.style.display = 'none';
    }

    // Close search results when clicking outside
    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.style.display = 'none';
        }
    });

    // Clear cart
    function clearCart() {
        Swal.fire({
            title: 'Clear Cart',
            text: 'Are you sure you want to remove all items from the cart?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#FF3B30',
            cancelButtonColor: '#8E8E93',
            confirmButtonText: 'Yes, clear it',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/sell/new';
            }
        });
    }

    // Edit quantity inline
    function editQuantity(productId, currentQty) {
        Swal.fire({
            title: 'Edit Quantity',
            text: 'Enter the new quantity:',
            input: 'number',
            inputValue: currentQty,
            inputAttributes: {
                min: 1,
                step: 1
            },
            showCancelButton: true,
            confirmButtonColor: '#007AFF',
            cancelButtonColor: '#8E8E93',
            confirmButtonText: 'Update',
            cancelButtonText: 'Cancel',
            inputValidator: (value) => {
                if (!value || value < 1) {
                    return 'Please enter a valid quantity (minimum 1)';
                }
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const newQty = result.value;
                // Submit the form via POST to update quantity
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/sell/edit-qty/' + productId + '?_method=PUT';

                const qtyInput = document.createElement('input');
                qtyInput.type = 'hidden';
                qtyInput.name = 'qty';
                qtyInput.value = newQty;

                form.appendChild(qtyInput);
                document.body.appendChild(form);
                form.submit();
            }
        });
    }

    // Auto-focus barcode input on page load
    window.addEventListener('DOMContentLoaded', function() {
        document.getElementById('codeInput').focus();
    });

    // Discount functionality
    let currentDiscountType = 'percentage';
    const originalTotal = <%= total %>;

    function toggleDiscountSection() {
        const content = document.getElementById('discountContent');
        const toggleBtn = document.querySelector('.discount-toggle-btn');
        const arrow = toggleBtn.querySelector('.toggle-arrow');
        
        if (content.style.display === 'none' || content.style.display === '') {
            content.style.display = 'block';
            arrow.style.transform = 'rotate(180deg)';
        } else {
            content.style.display = 'none';
            arrow.style.transform = 'rotate(0deg)';
        }
    }

    function switchDiscountType(type) {
        currentDiscountType = type;
        
        // Update tab states
        document.querySelectorAll('.discount-tab').forEach(tab => {
            tab.classList.remove('active');
        });
        document.querySelector(`[data-type="${type}"]`).classList.add('active');
        
        // Update input placeholder and max values
        const input = document.getElementById('discountInput');
        const suffix = document.getElementById('discountSuffix');
        
        if (type === 'percentage') {
            input.placeholder = 'Enter discount percentage';
            input.max = '100';
            input.min = '0';
            suffix.textContent = '%';
        } else {
            input.placeholder = 'Enter discount amount';
            input.max = originalTotal.toString();
            input.min = '0';
            suffix.textContent = 'IQD';
        }
        
        // Clear preview when switching types
        document.getElementById('discountPreview').style.display = 'none';
    }

    function applyDiscount() {
        const discountValue = parseFloat(document.getElementById('discountInput').value) || 0;
        
        if (discountValue < 0) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Discount',
                text: 'Discount amount cannot be negative'
            });
            return;
        }

        let discountAmount = 0;
        let finalTotal = originalTotal;

        if (currentDiscountType === 'percentage') {
            if (discountValue > 100) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Percentage',
                    text: 'Discount percentage cannot exceed 100%'
                });
                return;
            }
            discountAmount = (originalTotal * discountValue) / 100;
        } else {
            if (discountValue > originalTotal) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Amount',
                    text: 'Discount amount cannot exceed the subtotal'
                });
                return;
            }
            discountAmount = discountValue;
        }

        finalTotal = originalTotal - discountAmount;

        // Update preview
        document.getElementById('discountAmount').textContent = discountAmount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + ' IQD';
        document.getElementById('finalTotalPreview').textContent = finalTotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + ' IQD';
        document.getElementById('discountPreview').style.display = 'block';

        // Update hidden fields
        document.getElementById('finalTotal').value = finalTotal;
        document.getElementById('discountType').value = currentDiscountType;
        document.getElementById('discountValue').value = discountValue;
        document.getElementById('discountAmountInput').value = discountAmount;

        // Show success message
        Swal.fire({
            icon: 'success',
            title: 'Discount Applied',
            text: `${discountValue}${currentDiscountType === 'percentage' ? '%' : ' IQD'} discount applied successfully`,
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false
        });
    }

    function clearDiscount() {
        document.getElementById('discountInput').value = '';
        document.getElementById('discountPreview').style.display = 'none';
        document.getElementById('finalTotal').value = originalTotal;
        document.getElementById('discountType').value = '';
        document.getElementById('discountValue').value = '0';
        document.getElementById('discountAmountInput').value = '0';

        Swal.fire({
            icon: 'info',
            title: 'Discount Cleared',
            text: 'All discounts have been removed',
            timer: 1500,
            timerProgressBar: true,
            showConfirmButton: false
        });
    }

    // Handle Enter key in discount input
    document.getElementById('discountInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            applyDiscount();
        }
    });
</script>

