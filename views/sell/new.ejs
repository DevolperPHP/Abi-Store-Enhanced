                <div class="discount-header">
                    <div class="discount-icon">
                        <ion-icon name="pricetags"></ion-icon>
                    </div>
                    <div class="discount-title">
                        <h3>Apply Discount</h3>
                        <p>Choose discount type and enter amount</p>
                    </div>
                    <button class="discount-toggle-btn" onclick="toggleDiscountSection()">
                        <ion-icon name="chevron-down" class="toggle-arrow"></ion-icon>
                    </button>
                </div>
                
                <div class="discount-content" id="discountContent" style="display: none;">
                    <div class="discount-tabs">
                        <button class="discount-tab active" onclick="switchDiscountType('percentage')" data-type="percentage">
                            <ion-icon name="percent"></ion-icon>
                            <span>Percentage</span>
                        </button>
                        <button class="discount-tab" onclick="switchDiscountType('value')" data-type="value">
                            <ion-icon name="cash"></ion-icon>
                            <span>Value</span>
                        </button>
                    </div>
                    
                    <div class="discount-input-container">
                        <div class="discount-input-wrapper">
                            <input type="number" id="discountInput" class="discount-input" placeholder="Enter discount" min="0" max="100" value="0">
                            <div class="discount-suffix" id="discountSuffix">%</div>
                        </div>
                        <div class="discount-actions">
                            <button class="btn-secondary btn-ghost" onclick="clearDiscount()">
                                <ion-icon name="refresh"></ion-icon>
                            </button>
                            <button class="btn-primary" onclick="applyDiscount()">
                                <ion-icon name="checkmark"></ion-icon>
                                <span>Apply</span>
                            </button>
                        </div>
                    </div>
                    
                    <div class="discount-preview" id="discountPreview" style="display: none;">
                        <div class="preview-row">
                            <span class="preview-label">Discount Amount:</span>
                            <span class="preview-value discount-value" id="discountAmount">0 IQD</span>
                        </div>
                        <div class="preview-divider"></div>
                        <div class="preview-row final-total">
                            <span class="preview-label">Final Total:</span>
                            <span class="preview-value final-amount" id="finalTotalPreview"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

