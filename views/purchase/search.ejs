<%- include("../layout/navbar") -%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Product Search Results</h1>
        <p class="dashboard-subtitle">Browse and select products to add to your purchase</p>
    </div>

    <!-- Premium Inventory Controls -->
    <div class="premium-inventory-controls">
        <div class="controls-header">
            <div class="header-content">
                <div class="header-icon">
                    <ion-icon name="search-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="controls-title">Search Results</h2>
                    <p class="controls-subtitle">Found <%= products.length %> product<%= products.length !== 1 ? 's' : '' %> matching your search</p>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" onclick="window.location.href='/purchase'">
                    <ion-icon name="arrow-back-outline"></ion-icon>
                    Back to Purchase
                </button>
            </div>
        </div>
    </div>

    <!-- Search Results Grid -->
    <% if (products && products.length > 0) { %>
        <div class="products-grid-compact">
            <% products.forEach(data => { %>
                <div class="product-compact-card" onclick="addToCart('<%= data.id%>', '<%= data.name%>', '<%= data.price%>', '<%= data.sell_price%>', '<%= data.size%>', '<%= data.color%>', '<%= data.image%>')">
                    <!-- Compact Image Section -->
                    <div class="compact-image-container">
                        <img src="/upload/images/<%= data.image%>" alt="<%= data.name%>" class="compact-product-image">
                        <div class="compact-overlay">
                            <ion-icon name="eye" class="overlay-icon"></ion-icon>
                        </div>
                    </div>

                    <!-- Compact Content -->
                    <div class="compact-content">
                        <div class="compact-header">
                            <h4 class="compact-title"><%= data.name%></h4>
                            <div class="compact-status">
                                <div class="status-dot available"></div>
                            </div>
                        </div>

                        <!-- Compact Specs -->
                        <div class="compact-specs">
                            <div class="compact-spec-item">
                                <ion-icon name="color-palette" class="spec-icon-small"></ion-icon>
                                <div class="color-mini">
                                    <div class="color-dot" style="background-color: <%= data.color%>"></div>
                                    <% if(data.colorName) { %>
                                        <span class="color-text-small"><%= data.colorName%></span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="compact-spec-item">
                                <ion-icon name="resize" class="spec-icon-small"></ion-icon>
                                <span class="size-text"><%= data.size%></span>
                            </div>
                        </div>

                        <!-- Compact Pricing -->
                        <div class="compact-pricing">
                            <div class="compact-price-row">
                                <span class="price-label-small">Cost:</span>
                                <span class="price-amount-small cost"><%= data.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%></span>
                            </div>
                            <div class="compact-price-row">
                                <span class="price-label-small">Sell:</span>
                                <span class="price-amount-small selling"><%= data.sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%></span>
                            </div>
                        </div>

                        <!-- Compact Profit -->
                        <% 
                            const profit = data.sell_price - data.price;
                            const profitPercentage = ((profit / data.price) * 100).toFixed(1);
                        %>
                        <div class="compact-profit <%= profit > 0 ? 'profit-positive' : 'profit-neutral' %>">
                            <ion-icon name="trending-up" class="profit-icon-small"></ion-icon>
                            <span class="profit-text-small">
                                <%= profit > 0 ? '+' : '' %><%= profit.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> (<%= profitPercentage %>%)
                            </span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <!-- Empty State -->
        <div class="empty-state-card">
            <div class="empty-icon">
                <ion-icon name="search-outline"></ion-icon>
            </div>
            <h3 class="empty-title">No Products Found</h3>
            <p class="empty-description">
                We couldn't find any products matching your search criteria. Try adjusting your search terms or browse all products.
            </p>
            <div class="empty-actions">
                <button class="btn-secondary" onclick="window.location.href='/purchase'">
                    <ion-icon name="arrow-back-outline"></ion-icon>
                    Back to Purchase
                </button>
                <button class="btn-primary" onclick="window.location.href='/purchase'">
                    <ion-icon name="add-outline"></ion-icon>
                    Browse All Products
                </button>
            </div>
        </div>
    <% } %>
</div>

