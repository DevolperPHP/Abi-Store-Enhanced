<script>
    function addToCart(productId, productName, costPrice, sellPrice, size, color, image) {
        Swal.fire({
            title: 'Add to Purchase Cart',
            html: `
                <div class="quantity-edit-form">
                    <div class="product-info-edit">
                        <img src="/upload/images/${image}" alt="${productName}" class="product-image-edit">
                        <div class="product-details-edit">
                            <h3 class="product-name-edit">${productName}</h3>
                            <div class="product-meta-edit">
                                <span class="meta-item-edit">Size: ${size}</span>
                                <span class="meta-item-edit">Color: ${color}</span>
                                <span class="meta-item-edit price-edit">Cost: ${parseInt(costPrice).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")}</span>
                                <span class="meta-item-edit selling-edit">Sell: ${parseInt(sellPrice).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")}</span>
                            </div>
                        </div>
                    </div>
                    <div class="quantity-section-edit">
                        <label class="quantity-label-edit">Quantity</label>
                        <div class="quantity-input-container">
                            <button type="button" class="quantity-btn-edit" onclick="decrementQuantity()">âˆ’</button>
                            <input type="number" id="quantityInput" class="quantity-input-edit" value="1" min="1" max="9999">
                            <button type="button" class="quantity-btn-edit" onclick="incrementQuantity()">+</button>
                        </div>
                    </div>
                </div>
            `,
            showCancelButton: true,
            showConfirmButton: true,
            confirmButtonText: 'Add to Cart',
            cancelButtonText: 'Cancel',
            confirmButtonColor: '#34C759',
            cancelButtonColor: '#8e8e93',
            customClass: {
                popup: 'apple-swal-popup',
                confirmButton: 'apple-swal-confirm',
                cancelButton: 'apple-swal-cancel'
            },
            width: '450px',
            padding: '20px',
            didOpen: () => {
                document.getElementById('quantityInput').focus();
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const quantity = document.getElementById('quantityInput').value;
                
                if (!quantity || quantity <= 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid Quantity',
                        text: 'Please enter a valid quantity (1 or more)',
                        confirmButtonColor: '#007AFF'
                    });
                    return;
                }

                // Add to cart via AJAX
                const formData = new FormData();
                formData.append('productId', productId);
                formData.append('quantity', quantity);
                formData.append('action', 'add');

                fetch(`/purchase/add-ajax/${productId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `qty=${quantity}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Redirect directly to purchase page
                        window.location.href = '/purchase';
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Failed to add item to cart',
                            confirmButtonColor: '#007AFF'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while adding the item',
                        confirmButtonColor: '#007AFF'
                    });
                });
            }
        });
    }

    function incrementQuantity() {
        const input = document.getElementById('quantityInput');
        const currentValue = parseInt(input.value) || 0;
        if (currentValue < 9999) {
            input.value = currentValue + 1;
        }
    }

    function decrementQuantity() {
        const input = document.getElementById('quantityInput');
        const currentValue = parseInt(input.value) || 1;
        if (currentValue > 1) {
            input.value = currentValue - 1;
        }
    }

    // Handle Enter key in quantity input
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && e.target.id === 'quantityInput') {
            const confirmButton = document.querySelector('.swal2-confirm');
            if (confirmButton) {
                confirmButton.click();
            }
        }
    });
</script>

