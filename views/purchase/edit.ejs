<!-- Modern Edit Container -->
<div class="edit-container">
    <!-- Edit Header -->
    <div class="edit-header">
        <div class="header-content">
            <div class="header-icon">
                <ion-icon name="create-outline"></ion-icon>
            </div>
            <div class="header-text">
                <h1 class="edit-title">Edit Purchase</h1>
                <p class="edit-subtitle">Modify purchase details and items</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn-back" onclick="window.location.href='/purchase/get-purchases'">
                <ion-icon name="arrow-back-outline"></ion-icon>
                Back to Purchases
            </button>
        </div>
    </div>

    <!-- Purchase Info Card -->
    <div class="purchase-info-card">
        <div class="info-header">
            <h3 class="info-title">
                <ion-icon name="receipt-outline"></ion-icon>
                Purchase Information
            </h3>
        </div>
        <div class="info-content">
            <div class="info-row">
                <div class="info-item">
                    <span class="info-label">Purchase ID</span>
                    <span class="info-value">#<%= data.id%></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Date</span>
                    <span class="info-value"><%= data.Date%></span>
                </div>
                <div class="info-item">
                    <span class="info-label">User</span>
                    <span class="info-value"><%= data.user%></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Section -->
    <div class="items-section">
        <div class="section-header">
            <h3 class="section-title">Purchase Items</h3>
            <p class="section-subtitle">Remove items or modify quantities</p>
        </div>

        <div class="items-table-container">
            <table class="modern-table">
                <tbody>
                    <% for (let i = 0; i < data.purchase.length; i++) { %>
                        <tr class="item-row">
                            <td class="col-num">
                                <span class="item-number"><%= i + 1%></span>
                            </td>
                            <td class="col-image">
                                <div class="product-image-container">
                                    <% if (data.purchase[i].image) { %>
                                        <img src="/upload/images/<%= data.purchase[i].image%>" alt="<%= data.purchase[i].name%>" class="product-image">
                                    <% } else { %>
                                        <div class="image-placeholder">
                                            <ion-icon name="image-outline"></ion-icon>
                                        </div>
                                    <% } %>
                                </div>
                            </td>
                            <td class="col-name">
                                <div class="product-name"><%= data.purchase[i].name%></div>
                            </td>
                            <td class="col-qty">
                                <div class="quantity-display">
                                    <ion-icon name="cube-outline"></ion-icon>
                                    <span><%= data.purchase[i].qty%></span>
                                </div>
                            </td>
                            <td class="col-specs">
                                <div class="specs-container">
                                    <div class="spec-item">
                                        <ion-icon name="resize" class="spec-icon"></ion-icon>
                                        <span class="spec-text"><%= data.purchase[i].size%></span>
                                    </div>
                                    <div class="spec-item">
                                        <div class="color-indicator" style="background-color: <%= data.purchase[i].color%>"></div>
                                        <span class="spec-text">Color</span>
                                    </div>
                                </div>
                            </td>
                            <td class="col-pricing">
                                <div class="pricing-display">
                                    <div class="price-row">
                                        <span class="price-label">Cost:</span>
                                        <span class="price-value cost"><%= data.purchase[i].cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                                    </div>
                                    <div class="price-row">
                                        <span class="price-label">Selling:</span>
                                        <span class="price-value selling"><%= data.purchase[i].sell.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                                    </div>
                                </div>
                            </td>
                            <td class="col-total">
                                <div class="total-amount">
                                    <%= (data.purchase[i].cost * data.purchase[i].qty).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                                </div>
                            </td>
                            <td class="col-actions">
                                <form action="/purchase/edit/remove/<%= data.id%>/<%= data.purchase[i].id%>?_method=PUT" method="post" class="remove-form">
                                    <button type="submit" class="btn-remove" onclick="return confirm('Are you sure you want to remove this item?')">
                                        <ion-icon name="trash-outline"></ion-icon>
                                        Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Total Summary -->
        <div class="total-summary">
            <div class="summary-card">
                <div class="summary-row">
                    <span class="summary-label">Current Total</span>
                    <span class="summary-value"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form Section -->
    <div class="edit-form-section">
        <div class="form-card">
            <div class="form-header">
                <h3 class="form-title">
                    <ion-icon name="settings-outline"></ion-icon>
                    Purchase Details
                </h3>
                <p class="form-subtitle">Update additional costs and trader information</p>
            </div>

            <form action="/purchase/edit/confirm/<%= data.id%>?_method=PUT" method="post" class="edit-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="cost" class="form-label">
                            <ion-icon name="calculator-outline"></ion-icon>
                            Additional Costs
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="number" 
                                id="cost" 
                                name="cost" 
                                value="<%= data.cost%>" 
                                class="form-input" 
                                required
                                placeholder="Enter additional costs"
                            >
                            <span class="input-suffix">IQD</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="trader" class="form-label">
                            <ion-icon name="person-outline"></ion-icon>
                            Trader Name
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="text" 
                                id="trader" 
                                name="trader" 
                                value="<%= data.trader%>" 
                                class="form-input" 
                                required
                                placeholder="Enter trader name"
                            >
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn-secondary" onclick="window.location.href='/purchase/get-purchases'">
                        <ion-icon name="close-outline"></ion-icon>
                        Cancel
                    </button>
                    <button type="submit" class="btn-primary">
                        <ion-icon name="checkmark-outline"></ion-icon>
                        Confirm Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

