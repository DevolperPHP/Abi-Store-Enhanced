<%- include("../layout/navbar") -%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">

    <!-- Purchase Overview Card -->
    <div class="purchase-overview-card">
        <div class="overview-header">
            <div class="purchase-icon">
                <ion-icon name="receipt-outline"></ion-icon>
            </div>
            <div class="purchase-meta">
                <h2 class="purchase-id">Purchase</h2>
                <div class="purchase-badges">
                    <span class="purchase-badge <%= data.store === true ? 'store' : 'main' %>">
                        <ion-icon name="<%= data.store === true ? 'storefront-outline' : 'cube-outline' %>"></ion-icon>
                        <%= data.store === true ? 'Store Purchase' : 'Main Inventory' %>
                    </span>
                </div>
            </div>
        </div>

        <div class="overview-info">
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="person-outline"></ion-icon>
                        Trader
                    </div>
                    <div class="info-value"><%= data.trader%></div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="calendar-outline"></ion-icon>
                        Date
                    </div>
                    <div class="info-value"><%= data.Date%></div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="person-circle-outline"></ion-icon>
                        User
                    </div>
                    <div class="info-value"><%= data.user%></div>
                </div>
                <div class="info-item">
                    <div class="info-label">
                        <ion-icon name="calculator-outline"></ion-icon>
                        Items Count
                    </div>
                    <div class="info-value"><%= data.purchase.length%> item<%= data.purchase.length !== 1 ? 's' : '' %></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Table Section -->
    <div class="items-section">
        <div class="section-header">
            <h3 class="section-title">Purchase Items</h3>
            <div class="section-subtitle">Detailed breakdown of all purchased items</div>
        </div>

        <div class="items-table-container">
            <table class="premium-table">

                <tbody>
                    <% for (let i = 0; i < data.purchase.length; i++) { %>
                        <tr class="item-row">
                            <td class="col-num">
                                <span class="item-number"><%= i + 1%></span>
                            </td>
                            <td class="col-image">
                                <div class="product-image-container">
                                    <% if (data.purchase[i].image) { %>
                                        <img src="/upload/images/<%= data.purchase[i].image%>" alt="<%= data.purchase[i].name%>" class="product-image">
                                    <% } else { %>
                                        <div class="image-placeholder">
                                            <ion-icon name="image-outline"></ion-icon>
                                        </div>
                                    <% } %>
                                </div>
                            </td>
                            <td class="col-name">
                                <div class="product-name"><%= data.purchase[i].name%></div>
                            </td>
                            <td class="col-qty">
                                <div class="quantity-badge">
                                    <ion-icon name="cube-outline"></ion-icon>
                                    <span><%= data.purchase[i].qty%></span>
                                </div>
                            </td>
                            <td class="col-specs">
                                <div class="specs-container">
                                    <div class="spec-item">
                                        <ion-icon name="resize" class="spec-icon"></ion-icon>
                                        <span class="spec-text"><%= data.purchase[i].size%></span>
                                    </div>
                                    <div class="spec-item">
                                        <div class="color-indicator" style="background-color: <%= data.purchase[i].color%>"></div>
                                        <span class="spec-text">Color</span>
                                    </div>
                                </div>
                            </td>
                            <td class="col-pricing">
                                <div class="pricing-container">
                                    <div class="price-row">
                                        <span class="price-label">Cost:</span>
                                        <span class="price-value cost"><%= data.purchase[i].cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                                    </div>
                                    <div class="price-row">
                                        <span class="price-label">Selling:</span>
                                        <span class="price-value selling"><%= data.purchase[i].sell.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                                    </div>
                                </div>
                            </td>
                            <td class="col-total">
                                <div class="total-amount">
                                    <%= (data.purchase[i].cost * data.purchase[i].qty).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Financial Summary -->
    <div class="financial-summary">
        <div class="summary-card">
            <div class="summary-header">
                <h3 class="summary-title">
                    <ion-icon name="calculator-outline"></ion-icon>
                    Financial Summary
                </h3>
            </div>
            
            <div class="summary-breakdown">
                <div class="summary-row">
                    <span class="summary-label">Items Total Cost</span>
                    <span class="summary-value additional" style="color: #007AFF;!important"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Additional Costs</span>
                    <span class="summary-value additional"><%= data.cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                </div>
                <div class="summary-divider"></div>
                <div class="summary-row total">
                    <span class="summary-label">Grand Total</span>
                    <span class="summary-value grand-total"><%= (data.cost + total).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-section">
        <div class="action-buttons">
            <button class="btn-secondary" onclick="window.location.href='/purchase/get-purchases'">
                <ion-icon name="arrow-back-outline"></ion-icon>
                Back to Purchases
            </button>
            <button class="btn-primary" onclick="window.location.href='/purchase/edit/<%= data.id%>'">
                <ion-icon name="create-outline"></ion-icon>
                Edit Purchase
            </button>
            <form action="/purchase/delete/<%= data.id%>?_method=delete" method="post" class="delete-form">
                <button type="submit" class="btn-danger" onclick="return confirm('Are you sure you want to delete this purchase? This action cannot be undone.')">
                    <ion-icon name="trash-outline"></ion-icon>
                    Delete Purchase
                </button>
            </form>
        </div>
    </div>
</div>

<style>
