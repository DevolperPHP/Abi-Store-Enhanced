        margin-right: auto;
    }

    .item-row:hover {
        background: #f8f9fa;
    }

    /* Table Column Sizes */
    .col-num { width: 50px; text-align: center; }
    .col-image { width: 70px; }
    .col-name { min-width: 180px; }
    .col-qty { width: 80px; text-align: center; }
