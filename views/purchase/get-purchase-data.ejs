    .btn-secondary:hover {
        background: rgba(0, 0, 0, 0.08);
    }

    .btn-secondary ion-icon {
        font-size: 16px;
    }

    .btn-danger {
        padding: 12px 24px;
        background: #FF3B30;
        color: #ffffff;
        border: none;
        border-radius: 12px;
        font-size: 15px;
