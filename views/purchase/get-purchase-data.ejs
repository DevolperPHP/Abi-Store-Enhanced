    }

    .btn-danger:hover {
        background: #d70015;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 59, 48, 0.3);
    }

    .btn-danger ion-icon {
        font-size: 16px;
    }

    .delete-form {
        display: inline-block;
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 1024px) {
        .dashboard-container {
            padding: 20px 16px;
        }

        .info-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .action-buttons button {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .dashboard-title {
            font-size: 28px;
        }

        .purchase-overview-card,
        .items-section,
        .summary-card {
            padding: 20px;
        }

        .overview-header {
            flex-direction: column;
            text-align: center;
            gap: 12px;
        }

        .info-grid {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .items-table-container {
            font-size: 14px;
        }

        .premium-table th,
        .premium-table td {
            padding: 12px 8px;
        }

        .col-specs {
            display: none;
        }

        .pricing-container {
            gap: 3px;
        }

        .price-row {
            font-size: 12px;
        }

        .summary-value.grand-total {
            font-size: 18px;
        }
    }

    @media (max-width: 480px) {
        .dashboard-title {
            font-size: 24px;
        }

        .purchase-id {
            font-size: 18px;
        }

        .col-pricing {
            display: none;
        }

        .col-image {
            width: 50px;
        }

        .product-image-container {
            width: 40px;
            height: 40px;
        }

        .purchase-overview-card,
        .items-section,
        .summary-card {
            padding: 16px;
        }

        .dashboard-container {
            padding: 16px 12px;
        }
    }
</style>

