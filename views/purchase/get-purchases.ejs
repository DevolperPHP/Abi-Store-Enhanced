<%- include("../layout/navbar") -%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Purchase History</h1>
        <p class="dashboard-subtitle">View and manage all purchase transactions</p>
    </div>

    <!-- Premium Inventory Controls -->
    <div class="premium-inventory-controls">
        <div class="controls-header">
            <div class="header-content">
                <div class="header-icon">
                    <ion-icon name="cube-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="controls-title">Purchase Management</h2>
                    <p class="controls-subtitle">Track inventory, search, and filter purchase history</p>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" onclick="refreshPage()">
                    <ion-icon name="refresh-outline"></ion-icon>
                    Refresh
                </button>
                <button class="btn-primary" onclick="window.location.href='/purchase'">
                    <ion-icon name="add-outline"></ion-icon>
                    New Purchase
                </button>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="search-filters-card">
        <div class="filters-grid">
            <!-- Search by Trader -->
            <div class="filter-group">
                <label class="filter-label">
                    <ion-icon name="person-outline"></ion-icon>
                    Search by Trader
                </label>
                <div class="autocomplete-container">
                    <input type="text" id="traderSearch" class="filter-input" placeholder="Type trader name..." autocomplete="off">
                    <div id="trader-results" class="autocomplete-results"></div>
                </div>
            </div>

            <!-- Date Range -->
            <div class="filter-group full-width">
                <label class="filter-label">
                    <ion-icon name="calendar-outline"></ion-icon>
                    Date Range
                </label>
                <div class="date-range">
                    <input type="date" id="startDate" class="filter-input">
                    <span class="date-separator">to</span>
                    <input type="date" id="endDate" class="filter-input">
                    <button class="filter-btn" onclick="searchByDate()">
                        <ion-icon name="search-outline"></ion-icon>
                    </button>
                </div>
            </div>

            <!-- Enhanced Filters -->
            <div class="filter-group">
                <label class="filter-label">
                    <ion-icon name="funnel-outline"></ion-icon>
                    Quick Filters
                </label>
                <select class="filter-select" onchange="applyFilter(this.value)">
                    <optgroup label="View All">
                        <option value="">All Purchases</option>
                    </optgroup>
                    <optgroup label="Purchase Type">
                        <option value="/purchase/search-by-filter/store">Store Purchases</option>
                        <option value="/purchase/search-by-filter/main">Main Inventory</option>
                    </optgroup>
                    <optgroup label="Date Range">
                        <option value="/purchase/search-by-date/today/today">Today</option>
                        <option value="/purchase/search-by-date/week/week">This Week</option>
                        <option value="/purchase/search-by-date/month/month">This Month</option>
                        <option value="/purchase/search-by-date/year/year">This Year</option>
                    </optgroup>
                    <optgroup label="Sort Order">
                        <option value="/purchase/search-by-filter/newest">Newest First</option>
                        <option value="/purchase/search-by-filter/oldest">Oldest First</option>
                    </optgroup>
                </select>
            </div>


            
        </div>
    </div>

    <!-- Search Mode Indicator -->
    <% if (purchases && purchases.length > 0 && purchases.searchMode) { %>
        <div class="search-mode-indicator">
            <ion-icon name="search-outline"></ion-icon>
            <span>Search Results (<%= purchases.length %> found)</span>
        </div>
    <% } %>

    <!-- Purchase Cards Grid -->
    <div class="purchases-grid" id="purchasesGrid">
        <% if (purchases && purchases.length > 0) { %>
            <% purchases.forEach((purchase, index) => { %>
                <div class="purchase-card <%= purchase.store === true ? 'store-purchase' : '' %>" onclick="handlePurchaseClick('<%= purchase.id %>')">
                    <div class="purchase-header">
                        <div class="purchase-icon">
                            <% if (purchase.store === true) { %>
                                <ion-icon name="storefront-outline"></ion-icon>
                            <% } else { %>
                                <ion-icon name="cube-outline"></ion-icon>
                            <% } %>
                        </div>
                        <div class="purchase-type-badge <%= purchase.store === true ? 'store' : 'main' %>">
                            <%= purchase.store === true ? 'Store' : 'Main' %>
                        </div>
                    </div>
                    
                    <div class="purchase-info">
                        <div class="info-row">
                            <ion-icon name="calendar-outline"></ion-icon>
                            <span><%= purchase.Date %></span>
                        </div>
                        <div class="info-row">
                            <ion-icon name="person-outline"></ion-icon>
                            <span><%= purchase.trader %></span>
                        </div>
                        <% if (purchase.note) { %>
                            <div class="info-row">
                                <ion-icon name="document-text-outline"></ion-icon>
                                <span class="note-text"><%= purchase.note %></span>
                            </div>
                        <% } %>
                    </div>

                    <div class="purchase-footer">
                        
                        <div class="purchase-total">
                            <%
                            let calculatedTotal = 0;
                            let itemsTotal = 0;
                            
                            // Sum up all item totals
                            if (purchase.purchase && purchase.purchase.length > 0) {
                                itemsTotal = purchase.purchase.reduce((sum, item) => sum + (item.total || 0), 0);
                            }
                            
                            // Add the additional cost
                            calculatedTotal = itemsTotal + (purchase.cost || 0);
                            %>
                            <%= calculatedTotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state-card">
                <div class="empty-icon">
                    <ion-icon name="cube-outline"></ion-icon>
                </div>
                <h3 class="empty-title">No Purchases Yet</h3>
                <p class="empty-description">
                    Start managing inventory by creating your first purchase. Click the "New Purchase" button to begin.
                </p>
                <button class="btn-primary" onclick="window.location.href='/purchase'">
                    <ion-icon name="add-outline"></ion-icon>
                    Create New Purchase
                </button>
            </div>
        <% } %>
    </div>

    <!-- Load More Button (for pagination) - Only show for full purchase list, not search results -->
    <% if (purchases && purchases.length > 0 && !purchases.searchMode) { %>
        <div class="load-more-container">
            <button class="btn-secondary" id="loadMoreBtn" onclick="loadMore()">
                <ion-icon name="chevron-down-outline"></ion-icon>
                Load More
            </button>
        </div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
<script>
    // Detect if this is a search results page
    const isSearchResults = window.location.pathname.includes('/search-by-') ||
                           window.location.search.includes('search') ||
                           document.referrer.includes('/search-by-');
    
    console.log('üîç Search mode detected:', isSearchResults);
    
    let page = 1;
    let loading = false;
    const allPurchasesData = <%- JSON.stringify(purchases || []) %>;

    // Autocomplete functionality for trader search
    function initTraderAutocomplete() {
        const traderNames = [...new Set(allPurchasesData.map(p => p.trader))].filter(Boolean);
        const fuse = new Fuse(traderNames, {
            threshold: 0.4,
        });

        const input = document.getElementById('traderSearch');
        const resultsDiv = document.getElementById('trader-results');

        input.addEventListener('input', function() {
            const value = this.value;
            
            if (value.length < 2) {
                resultsDiv.innerHTML = '';
                resultsDiv.style.display = 'none';
                return;
            }

            const results = fuse.search(value);
            
            if (results.length === 0) {
                resultsDiv.innerHTML = '<div class="autocomplete-item no-results">No matches found</div>';
                resultsDiv.style.display = 'block';
                return;
            }

            resultsDiv.innerHTML = results.map(result => `
                <div class="autocomplete-item" onclick="searchByTrader('${result.item}')">
                    ${highlightMatch(result.item, value)}
                </div>
            `).join('');
            
            resultsDiv.style.display = 'block';
        });

        // Close autocomplete when clicking outside
        document.addEventListener('click', function(e) {
            if (!input.contains(e.target) && !resultsDiv.contains(e.target)) {
                resultsDiv.style.display = 'none';
            }
        });
    }

    function highlightMatch(text, query) {
        const regex = new RegExp(`(${query})`, 'gi');
        return text.replace(regex, '<strong>$1</strong>');
    }

    // Search functions
    function searchByTrader(traderName) {
        if (traderName) {
            window.location.href = `/purchase/search-by-trader/${encodeURIComponent(traderName)}`;
        }
    }

    function searchByDate() {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        
        if (startDate && endDate) {
            window.location.href = `/purchase/search-by-date/${startDate}/${endDate}`;
        } else {
            Swal.fire({
                icon: 'warning',
                title: 'Date Required',
                text: 'Please select both start and end dates'
            });
        }
    }

    function applyFilter(url) {
        if (url) {
            // Handle special date range filters
            if (url.includes('/search-by-date/')) {
                const parts = url.split('/');
                const startParam = parts[parts.length - 2];
                const endParam = parts[parts.length - 1];
                
                let startDate, endDate;
                const today = new Date();
                
                // Helper function to format date as YYYY-MM-DD
                function formatDate(date) {
                    const year = date.getFullYear();
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const day = String(date.getDate()).padStart(2, '0');
                    return `${year}-${month}-${day}`;
                }
                
                switch(startParam) {
                    case 'today':
                        startDate = endDate = formatDate(today);
                        break;
                    case 'week':
                        // Get start of current week (Sunday)
                        const weekStart = new Date(today);
                        weekStart.setDate(today.getDate() - today.getDay());
                        // Get end of current week (Saturday)
                        const weekEnd = new Date(weekStart);
                        weekEnd.setDate(weekStart.getDate() + 6);
                        startDate = formatDate(weekStart);
                        endDate = formatDate(weekEnd);
                        break;
                    case 'month':
                        // Get start of current month
                        const monthStart = new Date(today.getFullYear(), today.getMonth(), 1);
                        // Get end of current month
                        const monthEnd = new Date(today.getFullYear(), today.getMonth() + 1, 0);
                        startDate = formatDate(monthStart);
                        endDate = formatDate(monthEnd);
                        break;
                    case 'year':
                        // Get start of current year
                        const yearStart = new Date(today.getFullYear(), 0, 1);
                        // Get end of current year
                        const yearEnd = new Date(today.getFullYear(), 11, 31);
                        startDate = formatDate(yearStart);
                        endDate = formatDate(yearEnd);
                        break;
                    default:
                        window.location.href = url;
                        return;
                }
                
                console.log('Quick filter dates:', { startDate, endDate, today: formatDate(today) });
                window.location.href = `/purchase/search-by-date/${startDate}/${endDate}`;
            } else {
                window.location.href = url;
            }
        }
    }

    function filterByAmount() {
        const minAmount = document.getElementById('minAmount').value;
        const maxAmount = document.getElementById('maxAmount').value;
        
        if (!minAmount && !maxAmount) {
            Swal.fire({
                icon: 'warning',
                title: 'Amount Required',
                text: 'Please enter at least a minimum or maximum amount'
            });
            return;
        }
        
        // For now, redirect to show all purchases and let user know this feature needs backend implementation
        Swal.fire({
            icon: 'info',
            title: 'Amount Filter',
            text: 'Amount filtering will be available soon. This feature requires backend implementation.'
        });
    }

    function clearAllFilters() {
        // Clear trader search
        const traderSearch = document.getElementById('traderSearch');
        if (traderSearch) traderSearch.value = '';
        
        // Clear date range
        const startDate = document.getElementById('startDate');
        const endDate = document.getElementById('endDate');
        if (startDate) startDate.value = '';
        if (endDate) endDate.value = '';
        
        // Reset filter select
        const filterSelect = document.querySelector('.filter-select');
        if (filterSelect) filterSelect.value = '';
        
        // Clear amount filters
        const minAmount = document.getElementById('minAmount');
        const maxAmount = document.getElementById('maxAmount');
        if (minAmount) minAmount.value = '';
        if (maxAmount) maxAmount.value = '';
        
        // Hide autocomplete results
        const resultsDiv = document.getElementById('trader-results');
        if (resultsDiv) {
            resultsDiv.innerHTML = '';
            resultsDiv.style.display = 'none';
        }
        
        // Navigate to all purchases
        window.location.href = '/purchase/get-purchases';
    }

    function refreshPage() {
        window.location.reload();
    }

    function handlePurchaseClick(purchaseId) {
        window.location.href = `/purchase/get-purchase/${purchaseId}`;
    }

    // Infinite scroll - Only for full purchase list, not search results
    if (!isSearchResults) {
        window.addEventListener('scroll', async () => {
            if (loading) return;

            const { scrollTop, scrollHeight, clientHeight } = document.documentElement;
            
            if (scrollTop + clientHeight >= scrollHeight - 200) {
                loading = true;
                page++;

                try {
                    const res = await fetch(`/purchase/api?page=${page}`);
                    const data = await res.json();

                    if (data.length === 0) {
                        document.getElementById('loadMoreBtn').style.display = 'none';
                        return;
                    }

                    const container = document.getElementById('purchasesGrid');
                    data.forEach(item => {
                        const card = createPurchaseCard(item);
                        container.appendChild(card);
                    });
                } catch (err) {
                    console.error('Error loading more purchases:', err);
                } finally {
                    loading = false;
                }
            }
        });
    } else {
        console.log('üö´ Infinite scroll disabled for search results');
    }

    function loadMore() {
        if (isSearchResults) {
            console.log('üö´ Load More disabled for search results');
            Swal.fire({
                icon: 'info',
                title: 'Search Mode',
                text: 'Load More is not available for search results. Please perform a new search to see different results.'
            });
            return;
        }
        
        // Original load more logic for full purchase list
        console.log('üìÑ Loading more purchases...');
        // ... rest of original load more logic
    }
    
    function createPurchaseCard(purchase) {
        const card = document.createElement('div');
        card.className = `purchase-card ${purchase.store === true ? 'store-purchase' : ''}`;
        card.onclick = () => handlePurchaseClick(purchase.id);

        let iconName = 'cube-outline';
        if (purchase.store) iconName = 'storefront-outline';

        card.innerHTML = `
            <div class="purchase-header">
                <div class="purchase-icon">
                    <ion-icon name="${iconName}"></ion-icon>
                </div>
                <div class="purchase-type-badge ${purchase.store === true ? 'store' : 'main'}">
                    ${purchase.store === true ? 'Store' : 'Main'}
                </div>
            </div>
            <div class="purchase-info">
                <div class="info-row">
                    <ion-icon name="calendar-outline"></ion-icon>
                    <span>${purchase.Date}</span>
                </div>
                <div class="info-row">
                    <ion-icon name="person-outline"></ion-icon>
                    <span>${purchase.trader}</span>
                </div>
            </div>
            <div class="purchase-footer">
                <div class="purchase-id">
                    <ion-icon name="receipt-outline"></ion-icon>
                    <span>#${purchase.id}</span>
                </div>
                <div class="purchase-total">
                    ${
                        (() => {
                            let calculatedTotal = 0;
                            let itemsTotal = 0;
                            
                            // Sum up all item totals
                            if (purchase.purchase && purchase.purchase.length > 0) {
                                itemsTotal = purchase.purchase.reduce((sum, item) => sum + (item.total || 0), 0);
                            }
                            
                            // Add the additional cost
                            calculatedTotal = itemsTotal + (purchase.cost || 0);
                            
                            return calculatedTotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        })()
                    } IQD
                </div>
            </div>
        `;

        return card;
    }

    // Initialize on page load
    window.addEventListener('DOMContentLoaded', function() {
        initTraderAutocomplete();
        
        // Handle Enter key in trader search
        document.getElementById('traderSearch').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const traderName = this.value.trim();
                if (traderName) {
                    searchByTrader(traderName);
                }
            }
        });
    });
</script>

