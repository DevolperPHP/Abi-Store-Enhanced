<%- include("../layout/navbar") -%>

<% if (typeof success !== 'undefined' && success) { %>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: decodeURIComponent(`<%= success %>`),
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false
        });
        if (window.history && window.history.replaceState) {
            window.history.replaceState({}, document.title, window.location.pathname);
        }
    </script>
<% } %>

<% if(err.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Size already exists',
            text: 'The size you are trying to add has already been added'
        })
    </script>
<%}%>

<!-- Modern Dashboard Container -->
<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Sizes</h1>
        <p class="dashboard-subtitle">Manage product sizes for your inventory</p>
    </div>

    <!-- Premium Inventory Controls -->
    <div class="premium-inventory-controls">
        <div class="controls-header">
            <div class="header-content">
                <div class="header-icon">
                    <ion-icon name="resize-outline"></ion-icon>
                </div>
                <div class="header-text">
                    <h2 class="controls-title">Size Management</h2>
                    <p class="controls-subtitle">Create and organize product sizes</p>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" onclick="refreshSizes()">
                    <ion-icon name="refresh-outline"></ion-icon>
                    Refresh
                </button>
                <button class="btn-primary" onclick="focusAddInput()">
                    <ion-icon name="add-outline"></ion-icon>
                    Add Size
                </button>
            </div>
        </div>
    </div>

    <!-- Sizes List -->
    <div class="sizes-list-container">
        <!-- Add Size Form -->
        <div class="add-size-card">
            <div class="add-size-header">
                <h3>Add New Size</h3>
            </div>
            <form action="/size/add" method="post" class="add-size-form">
                <div class="input-group">
                    <input type="text" name="size" id="sizeInput" placeholder="e.g., S, M, L, XL, XXL, 8, 10, 12" required>
                    <button type="submit" class="btn-submit">
                        <ion-icon name="checkmark-outline"></ion-icon>
                        Add Size
                    </button>
                </div>
            </form>
        </div>

        <!-- Sizes List -->
        <% if (size && size.length > 0) { %>
            <div class="sizes-list">
                <div class="sizes-list-header">
                    <div class="list-title">
                        <ion-icon name="list-outline"></ion-icon>
                        <h3>All Sizes (<%= size.length %>)</h3>
                    </div>
                </div>
                <div class="sizes-items">
                    <% size.forEach((s, index) => { %>
                        <div class="size-item">
                            <div class="size-info">
                                <div class="size-badge">
                                    <%= s.size %>
                                </div>
                            </div>
                            <div class="size-actions">
                                <button class="action-btn delete-btn" onclick="confirmDeleteSize('<%= s.id %>', '<%= s.size %>')" title="Delete size">
                                    <ion-icon name="trash-outline"></ion-icon>
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state-card">
                <div class="empty-icon">
                    <ion-icon name="resize-outline"></ion-icon>
                </div>
                <h3 class="empty-title">No Sizes Yet</h3>
                <p class="empty-description">
                    Add your first size to help organize your products. Sizes could be S, M, L for clothing or numeric sizes like 8, 10, 12 for shoes.
                </p>
                <button class="btn-primary" onclick="focusAddInput()">
                    <ion-icon name="add-outline"></ion-icon>
                    Add Your First Size
                </button>
            </div>
        <% } %>
    </div>
</div>

<script>
    // Focus on input when clicking Add Size button
    function focusAddInput() {
        document.getElementById('sizeInput').focus();
    }

    // Delete Size Function
    function confirmDeleteSize(id, sizeName) {
        Swal.fire({
            title: 'Delete Size',
            text: `Are you sure you want to delete size "${sizeName}"? This action cannot be undone.`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#FF3B30',
            cancelButtonColor: '#8E8E93',
            confirmButtonText: 'Delete',
            cancelButtonText: 'Cancel',
            customClass: {
                popup: 'modern-alert',
                confirmButton: 'modern-confirm-btn',
                cancelButton: 'modern-cancel-btn'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/size/delete/${id}?_method=DELETE`;
                document.body.appendChild(form);
                form.submit();
            }
        });
    }

    // Refresh Sizes
    function refreshSizes() {
        window.location.reload();
    }

    // Auto-focus input on page load
    window.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            document.getElementById('sizeInput').focus();
        }, 100);
    });
</script>

