<style>
    :root {
        --primary-color: #007AFF;
        --secondary-color: #FF3B30;
        --success-color: #34C759;
        --warning-color: #FF9500;
        --background: #F2F2F7;
        --surface: #FFFFFF;
        --text-primary: #000000;
        --text-secondary: #8E8E93;
        --border: #E5E5EA;
        --shadow: 0 2px 16px rgba(0, 0, 0, 0.1);
        --radius: 12px;
        --spacing: 16px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--background);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: var(--text-primary);
        line-height: 1.6;
    }

    /* LocalStore Container */
    .localstore-container {
        margin-left: 280px;
        margin-top: 72px;
        padding: 24px;
        min-height: calc(100vh - 72px);
        background: #ffffff;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .localstore-container.sidebar-open {
        margin-left: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--spacing);
    }

    .header {
        background: var(--surface);
        border-radius: var(--radius);
        padding: var(--spacing);
        box-shadow: var(--shadow);
        margin-bottom: var(--spacing);
        text-align: center;
    }

    .title {
        font-size: 28px;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 8px;
    }

    .subtitle {
        color: var(--text-secondary);
        font-size: 16px;
    }

    .orders-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: var(--spacing);
    }

    .order-card {
        background: var(--surface);
        border-radius: var(--radius);
        padding: var(--spacing);
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .order-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        border-color: var(--primary-color);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--border);
    }

    .order-id {
        font-size: 18px;
        font-weight: 700;
        color: var(--primary-color);
    }

    .order-status {
        background: var(--warning-color);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .order-meta {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 16px;
    }

    .meta-item {
        text-align: center;
        padding: 8px;
        background: var(--background);
        border-radius: 8px;
    }

    .meta-label {
        font-size: 12px;
        color: var(--text-secondary);
        margin-bottom: 4px;
    }

    .meta-value {
        font-size: 16px;
        font-weight: 600;
        color: var(--text-primary);
    }

    .order-items {
        margin-bottom: 16px;
    }

    .order-items-title {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--text-primary);
    }

    .items-list {
        max-height: 150px;
        overflow-y: auto;
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 8px;
        background: var(--background);
    }

    .item-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 4px 0;
        font-size: 13px;
        border-bottom: 1px solid var(--border);
    }

    .item-row:last-child {
        border-bottom: none;
    }

    .item-name {
        flex: 1;
        color: var(--text-primary);
    }

    .item-qty {
        color: var(--text-secondary);
        margin: 0 8px;
    }

    .item-total {
        font-weight: 600;
        color: var(--success-color);
    }

    .order-total {
        text-align: center;
        font-size: 20px;
        font-weight: 700;
        color: var(--success-color);
        margin-bottom: 16px;
        padding: 12px;
        background: linear-gradient(135deg, var(--success-color), #28A745);
        color: white;
        border-radius: 8px;
    }

    .order-actions {
        display: flex;
        gap: 8px;
    }

    .btn {
        flex: 1;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        background: #0056CC;
        transform: translateY(-1px);
    }

    .btn-secondary {
        background: var(--background);
        color: var(--text-primary);
        border: 1px solid var(--border);
    }

    .btn-secondary:hover {
        background: var(--border);
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: var(--text-secondary);
    }

    .empty-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--text-primary);
    }

    .empty-description {
        font-size: 16px;
        margin-bottom: 24px;
    }

    .btn-large {
        padding: 16px 32px;
        font-size: 16px;
        border-radius: 12px;
    }

    @media (max-width: 768px) {
        .localstore-container {
            margin-left: 0;
            padding: 12px;
        }

        .orders-grid {
            grid-template-columns: 1fr;
        }
        
        .order-meta {
            grid-template-columns: 1fr;
        }
        
        .container {
            padding: 0 12px;
        }
    }
</style>

<div class="localstore-container">
    <div class="container">
        <div class="header">
            <h1 class="title">Pending Orders</h1>
            <p class="subtitle">Manage and resume your held orders</p>
        </div>

        <% if (pendingOrders.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">ðŸ“‹</div>
                <h2 class="empty-title">No Pending Orders</h2>
                <p class="empty-description">You don't have any orders on hold right now.</p>
                <a href="/localstore/sell" class="btn btn-primary btn-large">
                    <ion-icon name="add-circle-outline"></ion-icon>
                    Start New Sale
                </a>
            </div>
        <% } else { %>
            <div class="orders-grid">
                <% pendingOrders.forEach(order => { %>
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-id"><%= order.bid %></div>
                            <div class="order-status">Pending</div>
                        </div>
                        
                        <div class="order-meta">
                            <div class="meta-item">
                                <div class="meta-label">Items</div>
                                <div class="meta-value"><%= order.products.length %></div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Date</div>
                                <div class="meta-value"><%= order.Date %></div>
                            </div>
                        </div>
                        
                        <div class="order-items">
                            <div class="order-items-title">Order Items:</div>
                            <div class="items-list">
                                <% order.products.forEach(item => { %>
                                    <div class="item-row">
                                        <span class="item-name"><%= item.name %> (<%= item.size %>)</span>
                                        <span class="item-qty">x<%= item.qty %></span>
                                        <span class="item-total"><%= item.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD</span>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                        
                        <div class="order-total">
                            Total: <%= order.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> IQD
                        </div>
                        
                        <div class="order-actions">
                            <button class="btn btn-primary" onclick="resumeOrder('<%= order.bid %>')">
                                <ion-icon name="play-outline"></ion-icon>
                                Resume Order
                            </button>
                            <button class="btn btn-secondary" onclick="deleteOrder('<%= order._id %>')">
                                <ion-icon name="trash-outline"></ion-icon>
                                Delete
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>

<script>
    function resumeOrder(orderId) {
        if (confirm('Resume this order? The items will be added back to your cart.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/localstore/sell/resume-order/${orderId}`;
            document.body.appendChild(form);
            form.submit();
        }
    }

    function deleteOrder(orderId) {
        if (confirm('Delete this pending order permanently?')) {
            fetch(`/localstore/sell/delete-pending/${orderId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Failed to delete order');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to delete order');
            });
        }
    }

    // Auto-refresh every 30 seconds
    setInterval(() => {
        fetch('/localstore/sell/analytics')
            .then(response => response.json())
            .then(data => {
                console.log('Pending orders count:', data.pendingOrders);
                // You can update a badge or counter here
            })
            .catch(error => console.error('Error fetching analytics:', error));
    }, 30000);
</script>

