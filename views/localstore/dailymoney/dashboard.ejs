<%- include("../layout/navbar") -%>

<% if(err.length > 0){%>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: `<%= err%>`
        })
    </script>
<%} %>

<div class="cashier-content">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Daily Transactions</h1>
        <p class="page-subtitle">Manage and review daily financial transactions</p>
    </div>

    <!-- Add Transaction Button -->
    <div style="margin-bottom: 24px;">
        <form action="/localstore/dailymoney/new" method="post">
            <button type="submit" class="btn btn-primary">
                <ion-icon name="add-outline"></ion-icon>
                Add New Transaction
            </button>
        </form>
    </div>

    <!-- Transactions List -->
    <div class="modern-card">
        <div class="modern-card-header">
            <div>
                <h3 class="modern-card-title">Transaction History</h3>
                <p class="modern-card-subtitle"><%= dailyMoney.length %> transaction(s) found</p>
            </div>
        </div>

        <% if(dailyMoney.length > 0) { %>
            <div class="grid grid-2">
                <% dailyMoney.forEach(data => { %>
                    <div class="stat-card" onclick="window.location.href='/localstore/dailymoney/get/<%=data.id%>'" style="cursor: pointer;">
                        <div class="stat-card-header">
                            <div>
                                <div class="stat-card-title">
                                    <ion-icon name="calendar-outline" style="color: var(--primary-color); margin-right: 8px;"></ion-icon>
                                    Daily Transaction
                                </div>
                            </div>
                            <% if(data.status == "pending"){%>
                                <span class="status-badge status-pending">Pending</span>
                            <%} else if(data.status == "completed") { %>
                                <span class="status-badge status-success">Completed</span>
                            <%} %>
                        </div>
                        <div style="margin-top: 16px;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                                <span style="color: var(--text-secondary); font-size: 14px;">Date:</span>
                                <span style="color: var(--text-primary); font-weight: 500;"><%= data.Date%></span>
                            </div>
                            <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                                <span style="color: var(--text-secondary); font-size: 14px;">Transaction ID:</span>
                                <span style="color: var(--text-primary); font-weight: 500;">#<%= data.id.substring(0, 8)%></span>
                            </div>
                            <div style="display: flex; justify-content: space-between; padding-top: 12px; border-top: 1px solid var(--border-color);">
                                <span style="color: var(--text-primary); font-size: 16px; font-weight: 600;">Total Amount:</span>
                                <span style="color: var(--primary-color); font-size: 20px; font-weight: 700;"><%= data.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</span>
                            </div>
                        </div>
                    </div>
                <%}) %>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 48px 24px; color: var(--text-secondary);">
                <ion-icon name="cash-outline" style="font-size: 64px; opacity: 0.3;"></ion-icon>
                <p style="margin-top: 16px; font-size: 16px;">No transactions found. Create your first daily transaction.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include("../layout/footer") -%>
