<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Modern CSS Files -->
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/components.css">
  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/localstore-modern.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
  <title>Cashier System</title>
  <link rel="icon" href="/images/logo.ico" type="image/x-icon">
</head>

<body>
  <!-- Modern Top Navigation -->
  <nav class="modern-navbar">
    <div class="nav-container">
      <button class="mobile-menu-toggle" onclick="toggleSidebar()">
        <ion-icon name="menu-outline"></ion-icon>
      </button>

      <div class="nav-brand">
        <img src="/images/logo.png" alt="Abi Store" class="brand-logo">
        <span class="brand-text">Cashier System</span>
      </div>

      <div class="nav-center">
        <div class="nav-time">
          <ion-icon name="time-outline"></ion-icon>
          <span id="clock"></span>
        </div>
      </div>

      <div class="nav-actions">
        <button class="nav-action-btn collapse-toggle" title="Collapse sidebar" onclick="toggleSidebarCollapse()" data-collapse-toggle aria-pressed="false">
          <ion-icon name="chevron-back-outline"></ion-icon>
        </button>

        <div class="nav-profile" onclick="toggleProfileMenu()">
          <div class="profile-avatar">
            <% if(user && user.name) { %>
              <%= user.name.charAt(0).toUpperCase() %>
            <% } else { %>
              <ion-icon name="person-circle-outline"></ion-icon>
            <% } %>
          </div>
          <div class="profile-info">
            <span class="profile-name"><%= user ? user.name : 'Cashier' %></span>
            <span class="profile-role">Point of Sale</span>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Modern Sidebar Navigation -->
  <aside class="modern-sidebar" id="sidebar">

    <nav class="sidebar-nav">
      <br>
      <!-- Sales Operations -->
      <div class="nav-group">
        <div class="nav-item active" data-page="sell" onclick="navigateTo('/localstore/sell')">
          <ion-icon name="wallet-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Sell</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
      </div>

      <!-- Inventory Management -->
      <div class="nav-group">
        <div class="nav-group-title">Inventory</div>
        <div class="nav-item" data-page="storage" onclick="navigateTo('/localstore/storage')">
          <ion-icon name="storefront-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Store Storage</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
        <div class="nav-item" data-page="main-storage" onclick="navigateTo('/localstore/storage/main-storage')">
          <ion-icon name="library-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Main Storage</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
      </div>

      <!-- Order Management -->
      <div class="nav-group">
        <div class="nav-group-title">Orders</div>
        <div class="nav-item" data-page="orders" onclick="navigateTo('/localstore/orders')">
          <ion-icon name="folder-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Orders</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
      </div>

      <!-- Financial -->
      <div class="nav-group">
        <div class="nav-group-title">Financial</div>
        <div class="nav-item" data-page="dailySummary" onclick="navigateTo('/localstore/dailysummary')">
          <ion-icon name="analytics-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Daily Summary</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
        <div class="nav-item" data-page="dailyMoney" onclick="navigateTo('/localstore/dailymoney/dashboard')">
          <ion-icon name="cash-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Daily Transaction</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
      </div>

      <!-- System Access -->
      <div class="nav-group">
        <div class="nav-group-title">System</div>
        <% if(user && user.isAdmin == true){%>
          <div class="nav-item" onclick="navigateTo('/')">
            <ion-icon name="construct-outline" class="nav-icon"></ion-icon>
            <span class="nav-text">Admin Panel</span>
            <ion-icon name="external-outline" class="chevron-icon"></ion-icon>
          </div>
        <%} %>
      </div>
    </nav>

    <!-- Sidebar Footer -->
    <div class="sidebar-footer">
      <form action="/passport/sign-out" method="post">
        <button type="submit" class="sidebar-logout">
          <ion-icon name="log-out-outline"></ion-icon>
          <span>Logout</span>
        </button>
      </form>
    </div>

  </aside>

  <!-- Sidebar Overlay for Mobile -->
  <div class="sidebar-overlay" onclick="closeSidebar()"></div>

  <!-- JavaScript for functionality -->
  <script src="/javascript/clock.js"></script>
  <script>
    const SIDEBAR_COLLAPSE_KEY = 'cashier-sidebar-collapsed';

    function applySidebarCollapseState(collapsed) {
      document.body.classList.toggle('sidebar-collapsed', collapsed);
      const toggleBtn = document.querySelector('[data-collapse-toggle]');
      if (toggleBtn) {
        toggleBtn.setAttribute('aria-pressed', collapsed);
        toggleBtn.title = collapsed ? 'Expand sidebar' : 'Collapse sidebar';
        const icon = toggleBtn.querySelector('ion-icon');
        if (icon) {
          icon.setAttribute('name', collapsed ? 'chevron-forward-outline' : 'chevron-back-outline');
        }
      }
    }

    function toggleSidebarCollapse(forceState) {
      const shouldCollapse = typeof forceState === 'boolean'
        ? forceState
        : !document.body.classList.contains('sidebar-collapsed');
      applySidebarCollapseState(shouldCollapse);
      try {
        localStorage.setItem(SIDEBAR_COLLAPSE_KEY, shouldCollapse ? '1' : '0');
      } catch (err) {
        console.warn('Unable to persist sidebar state', err);
      }
    }

    function initSidebarCollapse() {
      try {
        const savedState = localStorage.getItem(SIDEBAR_COLLAPSE_KEY);
        if (savedState === '1') {
          applySidebarCollapseState(true);
        }
      } catch (err) {
        console.warn('Unable to restore sidebar state', err);
      }
    }

    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.querySelector('.sidebar-overlay');
      const contentArea = document.querySelector('.cashier-content');
      const menuToggle = document.querySelector('.mobile-menu-toggle');

      sidebar.classList.toggle('open');
      overlay.classList.toggle('active');
      contentArea.classList.toggle('sidebar-open');

      const icon = menuToggle.querySelector('ion-icon');
      if (sidebar.classList.contains('open')) {
        icon.setAttribute('name', 'close-outline');
      } else {
        icon.setAttribute('name', 'menu-outline');
      }
    }

    function closeSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.querySelector('.sidebar-overlay');
      const contentArea = document.querySelector('.cashier-content');
      const menuToggle = document.querySelector('.mobile-menu-toggle');

      sidebar.classList.remove('open');
      overlay.classList.remove('active');
      contentArea.classList.remove('sidebar-open');

      const icon = menuToggle.querySelector('ion-icon');
      icon.setAttribute('name', 'menu-outline');
    }

    function navigateTo(url) {
      const clickedItem = event.currentTarget;
      clickedItem.style.opacity = '0.6';
      clickedItem.innerHTML = '<ion-icon name="loader-outline" class="nav-icon spinning"></ion-icon><span class="nav-text">Loading...</span>';

      if (window.innerWidth <= 768) {
        closeSidebar();
      }

      setTimeout(() => {
        window.location.href = url;
      }, 300);
    }

    function toggleProfileMenu() {
      const profileMenu = document.querySelector('.nav-profile');
      profileMenu.classList.toggle('active');
    }

    function updateActiveNavigation() {
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll('.nav-item');

      navItems.forEach(item => {
        item.classList.remove('active');
        const onclickAttr = item.getAttribute('onclick');
        if (onclickAttr) {
          const match = onclickAttr.match(/navigateTo\('([^']+)'\)/);
          const itemPath = match ? match[1] : null;

          if (itemPath && currentPath === itemPath) {
            item.classList.add('active');
          }
        }
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
      initSidebarCollapse();
      updateActiveNavigation();

      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(e) {
        if (window.innerWidth <= 768) {
          const sidebar = document.getElementById('sidebar');
          const menuToggle = document.querySelector('.mobile-menu-toggle');

          if (!sidebar.contains(e.target) && !menuToggle.contains(e.target)) {
            closeSidebar();
          }
        }
      });

      // Handle window resize
      let resizeTimeout;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          if (window.innerWidth > 768) {
            closeSidebar();
          } else {
            toggleSidebarCollapse(false);
          }
        }, 250);
      });

      document.body.classList.add('loaded');
    });
  </script>
</body>

</html>
