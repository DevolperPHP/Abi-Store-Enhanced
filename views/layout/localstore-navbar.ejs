        </div>
        <div class="nav-item" data-page="pending-orders" onclick="navigateToLocalStore('/localstore/sell/pending-orders')">
          <ion-icon name="pause-circle-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Pending Orders</span>
          <div class="nav-badge" id="pendingCount">0</div>
        </div>
      </div>
      
      <!-- Sales Management -->
      <div class="nav-group">
        <div class="nav-group-title">Sales Management</div>
        <div class="nav-item" data-page="sales-dashboard" onclick="navigateToLocalStore('/localstore/dashboard')">
          <ion-icon name="bar-chart-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Sales Dashboard</span>
          <ion-icon name="chevron-forward-outline" class="chevron-icon"></ion-icon>
        </div>
        <div class="nav-item" data-page="daily-money" onclick="navigateToLocalStore('/localstore/dailyMoney')">
          <ion-icon name="calendar-outline" class="nav-icon"></ion-icon>
          <span class="nav-text">Daily Money</span>
