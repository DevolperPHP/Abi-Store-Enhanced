    <div class="localstore-nav-container">
      <button class="mobile-menu-toggle" onclick="toggleLocalStoreSidebar()">
        <ion-icon name="menu-outline"></ion-icon>
      </button>
      
      <div class="localstore-nav-brand">
        <div class="brand-icon">
          <ion-icon name="cash-outline"></ion-icon>
        </div>
        <div class="brand-content">
          <span class="brand-title">LocalStore POS</span>
          <span class="brand-subtitle">Cashier System</span>
        </div>
      </div>
      
      <div class="localstore-nav-center">
        <div class="pos-status">
          <div class="status-indicator active">
            <div class="status-dot"></div>
            <span class="status-text">System Active</span>
          </div>
          <div class="nav-time">
            <ion-icon name="time-outline"></ion-icon>
            <span id="localstore-clock"></span>
          </div>
        </div>
      </div>
      
      <div class="localstore-nav-actions">
        <!-- Quick POS Actions -->
        <button class="pos-action-btn" title="Hold Order (F1)" onclick="holdCurrentOrder()">
          <ion-icon name="pause-circle-outline"></ion-icon>
          <span class="action-label">Hold</span>
        </button>
        
        <button class="pos-action-btn" title="Clear Cart (F2)" onclick="clearCurrentCart()">
          <ion-icon name="trash-outline"></ion-icon>
          <span class="action-label">Clear</span>
        </button>
        
        <button class="pos-action-btn primary" title="Process Payment (F3)" onclick="processCurrentPayment()">
          <ion-icon name="card-outline"></ion-icon>
          <span class="action-label">Pay</span>
        </button>
        
        <!-- User Profile -->
        <div class="localstore-profile" onclick="toggleLocalStoreProfileMenu()">
          <div class="profile-avatar">
            <% if(user && user.name) { %>
              <%= user.name.charAt(0).toUpperCase() %>
            <% } else { %>
              <ion-icon name="person-circle-outline"></ion-icon>
            <% } %>
          </div>
          <div class="profile-info">
            <span class="profile-name"><%= user ? user.name : 'Cashier' %></span>
            <span class="profile-role">Point of Sale</span>
          </div>
        </div>
      </div>
    </div>
  </nav>

