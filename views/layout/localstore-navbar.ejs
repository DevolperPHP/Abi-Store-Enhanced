  <!-- JavaScript for LocalStore functionality -->
  <script src="/javascript/active-page-cashier.js"></script>
  
  <script>
    // LocalStore specific functionality
    function toggleLocalStoreSidebar() {
      const sidebar = document.getElementById('localstoreSidebar');
      const overlay = document.querySelector('.localstore-sidebar-overlay');
      const container = document.querySelector('.localstore-container');
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      
      sidebar.classList.toggle('open');
      overlay.classList.toggle('active');
      container.classList.toggle('sidebar-open');
      
      // Update menu icon
      const icon = menuToggle.querySelector('ion-icon');
      if (sidebar.classList.contains('open')) {
        icon.setAttribute('name', 'close-outline');
      } else {
        icon.setAttribute('name', 'menu-outline');
      }
    }
    
    function closeLocalStoreSidebar() {
      const sidebar = document.getElementById('localstoreSidebar');
      const overlay = document.querySelector('.localstore-sidebar-overlay');
      const container = document.querySelector('.localstore-container');
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      
      sidebar.classList.remove('open');
      overlay.classList.remove('active');
      container.classList.remove('sidebar-open');
      
      // Reset menu icon
      const icon = menuToggle.querySelector('ion-icon');
      icon.setAttribute('name', 'menu-outline');
    }
    
    function navigateToLocalStore(url) {
      // Add loading animation to clicked item
      const clickedItem = event.currentTarget;
      const originalContent = clickedItem.innerHTML;
      
      clickedItem.style.opacity = '0.6';
      clickedItem.innerHTML = '<ion-icon name="loader-outline" class="nav-icon spinning"></ion-icon><span class="nav-text">Loading...</span>';
      
      // Close sidebar on mobile
      if (window.innerWidth <= 768) {
        closeLocalStoreSidebar();
      }
      
      // Add a small delay for better UX
      setTimeout(() => {
        window.location.href = url;
      }, 300);
    }
    
    function toggleLocalStoreProfileMenu() {
      const profileMenu = document.querySelector('.localstore-profile');
      profileMenu.classList.toggle('active');
    }
    
    // POS-specific functions
    function holdCurrentOrder() {
      // Trigger hold order functionality
      if (typeof holdOrder === 'function') {
        holdOrder();
      }
    }
    
    function clearCurrentCart() {
      // Trigger clear cart functionality
      if (typeof clearCart === 'function') {
        clearCart();
      }
    }
    
    function processCurrentPayment() {
      // Trigger payment processing
      if (typeof processPayment === 'function') {
        processPayment();
      }
    }
    
    // Quick actions
    function quickSearch() {
      const searchInput = document.getElementById('barcodeInput') || document.getElementById('searchInput');
      if (searchInput) {
        searchInput.focus();
        closeLocalStoreSidebar();
      }
    }
    
    function toggleFullscreen() {
      if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
      } else {
        document.exitFullscreen();
      }
    }
    
    function showKeyboardShortcuts() {
      Swal.fire({
        title: 'Keyboard Shortcuts',
        html: `
          <div style="text-align: left; font-family: monospace;">
            <p><strong>F1</strong> - Hold Order</p>
            <p><strong>F2</strong> - Clear Cart</p>
            <p><strong>F3</strong> - Process Payment</p>
            <p><strong>Ctrl+F</strong> - Focus Search</p>
            <p><strong>Ctrl+P</strong> - Print Receipt</p>
            <p><strong>F11</strong> - Toggle Fullscreen</p>
            <p><strong>Esc</strong> - Clear Selection</p>
            <p><strong>?</strong> - Show This Help</p>
          </div>
        `,
        icon: 'info',
        confirmButtonText: 'Got it!'
      });
    }
    
    function openCalculator() {
      // Open system calculator (would integrate with actual calculator in production)
      window.open('calculator:', '_blank');
    }
    
    function printReceipt() {
      // Trigger receipt printing
      if (typeof printCurrentReceipt === 'function') {
        printCurrentReceipt();
      } else {
        window.print();
      }
    }
    
    function showSystemInfo() {
      Swal.fire({
        title: 'System Information',
        html: `
          <div style="text-align: left;">
            <p><strong>LocalStore POS v2.0</strong></p>
            <p>Cashier System</p>
            <p>Status: <span style="color: #34C759;">Online</span></p>
            <p>User: <%= user ? user.name : 'Cashier' %></p>
            <p>Session: Active</p>
          </div>
        `,
        icon: 'info',
        confirmButtonText: 'Close'
      });
    }
    
    function confirmLocalStoreLogout() {
      Swal.fire({
        title: 'Exit POS System',
        text: 'Are you sure you want to exit the cashier system?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#FF3B30',
        cancelButtonColor: '#86868B',
        confirmButtonText: 'Exit POS',
        cancelButtonText: 'Stay',
        customClass: {
          popup: 'modern-alert',
          confirmButton: 'modern-confirm-btn',
          cancelButton: 'modern-cancel-btn'
        }
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = '/';
        }
      });
    }
    
    // Enhanced clock with POS time format
    function updateLocalStoreClock() {
      const clockElement = document.getElementById('localstore-clock');
      if (!clockElement) return;
      
      const now = new Date();
      const options = {
        hour: 'numeric',
        minute: '2-digit',
        second: '2-digit',
        hour12: true,
        timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
      };
      
      clockElement.textContent = now.toLocaleTimeString('en-US', options);
    }
    
    // Update pending orders count
    function updatePendingOrdersCount() {
      // This would typically fetch from an API
      const count = Math.floor(Math.random() * 5); // Simulated count
      const badge = document.getElementById('pendingCount');
      if (badge) {
        badge.textContent = count;
        badge.style.display = count > 0 ? 'flex' : 'none';
      }
    }
    
    // Keyboard shortcuts for POS
    function setupPOSKeyboardShortcuts() {
      document.addEventListener('keydown', function(e) {
        // Close sidebar with Escape key
        if (e.key === 'Escape') {
          closeLocalStoreSidebar();
        }
        
        // POS shortcuts
        switch(e.key) {
          case 'F1':
            e.preventDefault();
            holdCurrentOrder();
            break;
          case 'F2':
            e.preventDefault();
            clearCurrentCart();
            break;
          case 'F3':
            e.preventDefault();
            processCurrentPayment();
            break;
          case 'F11':
            e.preventDefault();
            toggleFullscreen();
            break;
          case '?':
            if (e.shiftKey) {
              e.preventDefault();
              showKeyboardShortcuts();
            }
            break;
        }
        
        // Toggle sidebar with Ctrl/Cmd + M
        if ((e.ctrlKey || e.metaKey) && e.key === 'm') {
          e.preventDefault();
          toggleLocalStoreSidebar();
        }
        
        // Quick search with Ctrl/Cmd + F
        if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
          e.preventDefault();
          quickSearch();
        }
        
        // Print with Ctrl/Cmd + P
        if ((e.ctrlKey || e.metaKey) && e.key === 'p') {
          e.preventDefault();
          printReceipt();
        }
      });
    }
    
    // Initialize LocalStore navigation
    function initLocalStoreNavigation() {
      updateLocalStoreClock();
      setInterval(updateLocalStoreClock, 1000);
      
      updatePendingOrdersCount();
      setInterval(updatePendingOrdersCount, 30000); // Update every 30 seconds
      
      setupPOSKeyboardShortcuts();
      
      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(e) {
        if (window.innerWidth <= 768) {
          const sidebar = document.getElementById('localstoreSidebar');
          const menuToggle = document.querySelector('.mobile-menu-toggle');
          
          if (!sidebar.contains(e.target) && !menuToggle.contains(e.target)) {
            closeLocalStoreSidebar();
          }
        }
      });
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      initLocalStoreNavigation();
      
      // Handle window resize
      window.addEventListener('resize', function() {
        if (window.innerWidth > 768) {
          closeLocalStoreSidebar();
        }
      });
    });
  </script>
  
