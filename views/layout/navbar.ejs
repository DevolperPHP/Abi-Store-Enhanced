  <script>
    const SIDEBAR_COLLAPSE_KEY = 'abi-sidebar-collapsed';

    function applySidebarCollapseState(collapsed) {
      document.body.classList.toggle('sidebar-collapsed', collapsed);
      const toggleBtn = document.querySelector('[data-collapse-toggle]');
      if (toggleBtn) {
        toggleBtn.setAttribute('aria-pressed', collapsed);
        toggleBtn.title = collapsed ? 'Expand sidebar' : 'Collapse sidebar';
        const icon = toggleBtn.querySelector('ion-icon');
        if (icon) {
          icon.setAttribute('name', collapsed ? 'chevron-forward-outline' : 'chevron-back-outline');
        }
      }
    }

    function toggleSidebarCollapse(forceState) {
      const shouldCollapse = typeof forceState === 'boolean'
        ? forceState
        : !document.body.classList.contains('sidebar-collapsed');
      applySidebarCollapseState(shouldCollapse);
      try {
        localStorage.setItem(SIDEBAR_COLLAPSE_KEY, shouldCollapse ? '1' : '0');
      } catch (err) {
        console.warn('Unable to persist sidebar state', err);
      }
    }

    function initSidebarCollapse() {
      try {
        const savedState = localStorage.getItem(SIDEBAR_COLLAPSE_KEY);
        if (savedState === '1') {
          applySidebarCollapseState(true);
        }
      } catch (err) {
        console.warn('Unable to restore sidebar state', err);
      }
    }

    // Enhanced Sidebar functionality
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.querySelector('.sidebar-overlay');
      const dashboard = document.querySelector('.dashboard-container');
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      
      sidebar.classList.toggle('open');
      overlay.classList.toggle('active');
      dashboard.classList.toggle('sidebar-open');
      
      // Update menu icon
      const icon = menuToggle.querySelector('ion-icon');
      if (sidebar.classList.contains('open')) {
        icon.setAttribute('name', 'close-outline');
      } else {
        icon.setAttribute('name', 'menu-outline');
      }
    }
    
    function closeSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.querySelector('.sidebar-overlay');
      const dashboard = document.querySelector('.dashboard-container');
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      
      sidebar.classList.remove('open');
      overlay.classList.remove('active');
      dashboard.classList.remove('sidebar-open');
      
      // Reset menu icon
      const icon = menuToggle.querySelector('ion-icon');
      icon.setAttribute('name', 'menu-outline');
    }
    
    // Enhanced Navigation function with loading state
    function navigateTo(url) {
      // Add loading animation to clicked item
      const clickedItem = event.currentTarget;
      const originalContent = clickedItem.innerHTML;
      
      clickedItem.style.opacity = '0.6';
      clickedItem.innerHTML = '<ion-icon name="loader-outline" class="nav-icon spinning"></ion-icon><span class="nav-text">Loading...</span>';
      
      // Close sidebar on mobile
      if (window.innerWidth <= 768) {
        closeSidebar();
      }
      
      // Add a small delay for better UX
      setTimeout(() => {
        window.location.href = url;
      }, 300);
    }
    
    // Enhanced Profile menu toggle
    function toggleProfileMenu() {
      // Add profile dropdown functionality
      const profileMenu = document.querySelector('.nav-profile');
      profileMenu.classList.toggle('active');
    }
    
    // Enhanced Logout confirmation with better UX
    function confirmLogout() {
      Swal.fire({
        title: 'Sign Out',
        text: 'Are you sure you want to sign out?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#FF3B30',
        cancelButtonColor: '#86868B',
        confirmButtonText: 'Sign Out',
        cancelButtonText: 'Cancel',
        customClass: {
          popup: 'modern-alert',
          confirmButton: 'modern-confirm-btn',
          cancelButton: 'modern-cancel-btn'
        },
        showClass: {
          popup: 'animate__animated animate__fadeInDown'
        },
        hideClass: {
          popup: 'animate__animated animate__fadeOutUp'
        }
      }).then((result) => {
        if (result.isConfirmed) {
          // Add loading state
          const logoutBtn = document.querySelector('.logout-btn');
          logoutBtn.innerHTML = '<ion-icon name="loader-outline" class="spinning"></ion-icon>';
          logoutBtn.disabled = true;
          
          // Submit the logout form
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = '/passport/sign-out';
          document.body.appendChild(form);
          form.submit();
        }
      });
    }
    
    // Enhanced active navigation update
    function updateActiveNavigation() {
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll('.nav-item');
      
      navItems.forEach(item => {
        item.classList.remove('active');
        const onclickAttr = item.getAttribute('onclick');
        if (onclickAttr) {
          const match = onclickAttr.match(/navigateTo\('([^']+)'\)/);
          const itemPath = match ? match[1] : null;
          
          if (itemPath && currentPath === itemPath) {
            item.classList.add('active');
          }
        }
      });
      
      // Special handling for dashboard
      if (currentPath === '/' || currentPath === '') {
        const dashboardItem = document.querySelector('[onclick="navigateTo(\'/\')"]');
        if (dashboardItem) dashboardItem.classList.add('active');
      }
    }
    
    // Scroll animations for cards
    function observeScrollAnimations() {
      const cards = document.querySelectorAll('.stat-card, .content-card');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      });
      
      cards.forEach(card => {
        card.classList.add('scroll-fade-in');
        observer.observe(card);
      });
    }
    
    // Real-time notifications (simulated)
    function simulateNotifications() {
      const notificationBadge = document.querySelector('.notification-badge');
      if (!notificationBadge) return;
      
      // Update notification count periodically (in a real app, this would come from WebSocket or polling)
      setInterval(() => {
        const currentCount = parseInt(notificationBadge.textContent) || 0;
        if (Math.random() > 0.95 && currentCount < 9) { // 5% chance to increment
          notificationBadge.textContent = currentCount + 1;
          notificationBadge.style.animation = 'pulse 0.6s ease-in-out';
          setTimeout(() => {
            notificationBadge.style.animation = 'pulse 2s infinite';
          }, 600);
        }
      }, 10000); // Check every 10 seconds
    }
    
    // Enhanced clock with AM/PM format
    function updateClock() {
      const clockElement = document.getElementById('clock');
      if (!clockElement) return;
      
      const now = new Date();
      const options = {
        hour: 'numeric',
        minute: '2-digit',
        second: '2-digit',
        hour12: true,
        timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
      };
      
      clockElement.textContent = now.toLocaleTimeString('en-US', options);
    }
    
    // Keyboard navigation support
    function setupKeyboardNavigation() {
      document.addEventListener('keydown', function(e) {
        // Close sidebar with Escape key
        if (e.key === 'Escape') {
          closeSidebar();
        }
        
        // Toggle sidebar with Ctrl/Cmd + M
        if ((e.ctrlKey || e.metaKey) && e.key === 'm') {
          e.preventDefault();
          toggleSidebar();
        }
        
        // Quick navigation with arrow keys when sidebar is focused
        if (document.getElementById('sidebar').classList.contains('open')) {
          const navItems = Array.from(document.querySelectorAll('.nav-item'));
          const activeIndex = navItems.findIndex(item => item.classList.contains('active'));
          
          if (e.key === 'ArrowDown' && activeIndex < navItems.length - 1) {
            e.preventDefault();
            navItems[activeIndex + 1].focus();
          }
          
          if (e.key === 'ArrowUp' && activeIndex > 0) {
            e.preventDefault();
            navItems[activeIndex - 1].focus();
          }
        }
      });
    }
    
    // Performance monitoring
    function monitorPerformance() {
      // Log page load performance
      window.addEventListener('load', () => {
        const perfData = performance.getEntriesByType('navigation')[0];
        console.log(`Page loaded in ${perfData.loadEventEnd - perfData.loadEventStart}ms`);
      });
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
  initSidebarCollapse();
  updateActiveNavigation();
      observeScrollAnimations();
      simulateNotifications();
      setupKeyboardNavigation();
      monitorPerformance();
      
      // Update clock every second
      updateClock();
      setInterval(updateClock, 1000);
      
      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(e) {
        if (window.innerWidth <= 768) {
          const sidebar = document.getElementById('sidebar');
          const menuToggle = document.querySelector('.mobile-menu-toggle');
          
          if (!sidebar.contains(e.target) && !menuToggle.contains(e.target)) {
            closeSidebar();
          }
        }
      });
      
      // Handle window resize with debouncing
      let resizeTimeout;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          if (window.innerWidth > 768) {
            closeSidebar();
          } else {
            toggleSidebarCollapse(false);
          }
        }, 250);
      });
      
      // Add loading class to body initially
      document.body.classList.add('loaded');
    });
  </script>
  
